<% f = value_for(:form) %>

<% @product.properties.each do |prop| %>
   <% case prop.property_type %>
   <% when "string" %>
      <%= f.input prop.name %>
   <% when "integer" %>
     <%= f.input prop.name, :as => :number %>
   <%# when "set" %>
     <%#= f.input prop.name, :as => :select %>
  <% end %>
<% end %>
