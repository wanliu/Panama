<%= widget_div do %>
	<a href="#" class='handle' >My Cart</a>
	<span id="shop_count" class="badge badge-important"><%= @my_cart.items_count %></span>

<% end %>

<div id="cart_box">
	<div class="tool">
		<%= link_to_if @my_cart.items.count > 0, t(:checkout) , '#', :class => 'btn btn-primary' do %>
			<%= link_to t(:checkout), '#', :class => 'btn btn-primary disabled' %>
		<% end %>
	</div>
	<hr>
	<%= render @my_cart.items %>

	</div>
</div>
<script type="text/javascript">
	require(["jquery", 'my_cart'], function($, MyCart){
		var id = "#<%= widget_id %>";
		var my_cart = new MyCart;
	});
</script>