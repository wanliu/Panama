<%= widget_div :class => "nav_item" do %>
    <%= link_to '#', class: 'handle' do %>
        <%= icon(:'shopping-cart') + ' ' + t(:my_cart) %>
    <% end %>
    <span id="shop_count" class="badge badge-important"><%= @my_cart.items_count %></span>


<div id="cart_box">
    <div class="tool">
        <%= form_tag cart_clear_list do %>
            <input type='submit' class='btn' value="<%=t(:clear_list) %>" />
        <% end %>

        <%= link_to_if @my_cart.items.count > 0,
                    t(:checkout),
                    person_cart_index_path(current_user.login),
                    :class => 'btn btn-primary checkout' do %>
        <%= link_to t(:checkout),
                    person_cart_index_path(current_user.login),
                    :class => 'btn btn-primary checkout disabled' %>
        <% end %>
        <table class="cart_top">
            <tr>
                <td class="product_total">商品总价：0</td>
            </tr>
        </table>
        </div>
    </div>

<% end %>
<%= javascript_include_tag "my_cart" %>
