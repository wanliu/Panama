<%= widget_div do %>
	<%= select_tag @query, options_for_items(@items) %>
<% end %>

<script type="text/javascript">
	$("#<%= widget_id %>").change(function(event){
		value = $("#<%= widget_id %> option:selected").val();
		url = "<%= trigget(:container, :change) %>&value="  + value;
		$.getScript(url);
	});
</script>
