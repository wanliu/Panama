<div class="row-fluid">
	<div class='offset2'>
		<form class="form-search">
			<input type="text" class="input-medium search-query">
			<button type="submit" class="btn">Search</button>
		</form>
	</div>
</div> 	
<div class='row-fluid dialog_product'>

	<div class="span2">
		<%= render "category_selector" %>
	</div>
	<div class="span3 relative">
		<select multiple="multiple" name="product" class="product_list">
		</select>
		<div class='buttons'>
			<%= link_to '#', :class => 'btn add_to_select' do %>
			<%= icon 'arrow-right' %>
			<% end %>
			<%= link_to '#', :class => 'btn add_to_select' do %>
			<%= icon 'arrow-left' %>
			<% end %>
		</div>
	</div>
	<div class="span7">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th><a href="#" class="select_all">全选</td>
						<th>产品名</th>
						<th>价格</th>
						<th>库存</th>
						<th>操作</th>
					</tr>
				</thead>
				<tbody>
				</tbody>
				<script type="text/javascript">
					var product_view = new ProductView({ el : $(".table"), models: <%=raw @products.to_json %> });
					new WizardView({ 
						el: $(".dialog_product"),
						select_handle: function(models){
							_.each(models, function(model){
								product_view.render(model);
							})
						}
					});				
				</script>
				<a href="#" class="deleteAll">删除选中</a>
			</table>
		</div>
	</div>
</div>