<div class="row-fluid">
  <div class='offset1 span10'>
  	<div class='dialog'>
	    <div class="page-header">
	      <h2 class="page-title">请选择你经营的产品</h2>
	    </div>  	
	  	<div class='row-fluid'>
			<div class="span2">
				<%= render "category_selector" %>
			</div> 
			<div class="span3 relative">
		<!-- 		<textarea name="product" cols="4" rows="20" style="over-flow:auto;">
				</textarea> -->
				<select multiple="multiple" name="product" class="product_list">
				</select>
				<div class='buttons'>
					<%= link_to '#', :class => 'btn add_to_select' do %>
						<%= icon 'arrow-right' %>
					<% end %>
					<%= link_to '#', :class => 'btn add_to_select' do %>
						<%= icon 'arrow-left' %>
					<% end %>
				</div>
			</div>
			<!-- <div class="span1" style="margin-left:-30px;padding-top:30px;"> -->
			<!-- </div> -->
			<div class="span7">
				<table class="table table-bordered">
					<tr>
						<th>产品名</th>
						<th>价格</th>
						<th>库存</th>
					</tr>
				</table>
			</div>
		</div>
		<div class='row-fluid'>
			<form class='form-horizontal'>
			<div class="span12 form-actions">
				<%= link_to '上一步', previous_wizard_path, :class => 'btn' %>
				<%= link_to '下一步', next_wizard_path, :class => 'btn btn-primary' %>
			</div>
			</form>
		</div>
	</div>
</div>
<script type="text/javascript">
$(function(){	
	$('table td').live('click',function(){
		if(!$(this).is('.input')){
			$(this).addClass('input').html('<input type="text" value="'+ $(this).text() +'" />').find('input').focus().blur(function(){
				$(this).parent().removeClass('input').html($(this).val() || 0);
			});					
		}
	}).hover(function(){
		$(this).addClass('hover');
	},function(){
		$(this).removeClass('hover');
	});

});
</script>

