<% active_section :ask_buy %>

<div class='row-fluid'>
  <div class='span8 widget'>
    <table class='table table-striped'>
      <thead>
        <tr>
          <th>标题</th>
          <th>单价</th>
          <th>数量</th>
          <th>状态</th>
          <th>描述</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @ask_buy.each do |a| %>
        <tr>
          <td><%=a.title %></td>
          <td><%=a.price %></td>
          <td><%=a.amount %></td>
          <td><%=a.status %></td>
          <td><%=a.describe %></td>
          <td>
            <a href="#">查看</a>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class='span5'>
  </div>
</div>
