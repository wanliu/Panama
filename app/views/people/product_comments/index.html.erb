<% active_section "product-comment" %>
<div class='row-fluid'>
  <div class='span12'>
    <h2 class="page-title">评论管理 <small>商品评论的清单</small></h2>
  </div>
</div>
<div class='row-fluid'>
  <div class='span8 comment-list'>
    <% @transactions.each do |t| %>
      <%= render "comment", :order => t %>
    <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $(".comment-list .comment").each(function(i, el){
      new ProductCommentView({
        el: $(el),
        create_url: "<%=person_product_comments_path(current_user) %>",
        raty_url: "<%=asset_path 'raty' %>"
      })
    })
  })
</script>