<% active_section "product-comment" %>
<% @transactions.each do |t| %>
	<div class='product-comment' >
		<div class='row-fluid'>
			<div class='span5'>
				<div class='seller'>
					商家: <%= t.seller.name %>
				</div>
				<% t.items.each do | item | %>
				<div class='title'>
					title: <%=item.title %>
				</div>
				<div>
					<img class="img-polaroid" src="<%=item.product.photos.avatar %>" />
				</div>
				<div class="product_name">
					商品名称: <%=item.product.name %>
				</div>
				<div class='price'>
					价格: <%=item.price %>
				</div>
				<div class='quantity'>
					数量: <%=item.amount %>
				</div>
				<% end %>
			</div>
			<div class='span7'>
				<div class='row-fluid'>
					评分:
				</div>
				<div class='row-fluid'>
					<div class='span4'>
						商品
						<span class='grade-product'>
						</span>
					</div>
					<div class='span4'>
						服务
						<span class='serve'></span>
					</div>
					<div class='span4'>
						物流
						<span class="logistics"></span>
					</div>
				</div>
				<div class='row-fluid'>
					评论：
				</div>
				<div class='row-fluid'>
					<textarea rows="6" class='span12'></textarea>
					<button class='btn btn-primary'>提交</button>
				</div>
			</div>
		</div>
	</div>
<% end %>
</div>
<script type="text/javascript">
    $(".grade-product").raty({
        readOnly : false,
        score    : 5,
        path     : "<%= asset_path 'raty' %>"
    })

    $(".serve").raty({
        readOnly : false,
        score    : 5,
        path     : "<%= asset_path 'raty' %>"
    })

    $(".logistics").raty({
        readOnly : false,
        score    : 5,
        path     : "<%= asset_path 'raty' %>"
    })
</script>