<div class="comments_div">
  <% @comments.each do |comment| %>
    <div class="comment_main container-fluid">
    	<ul>
        <li><span>
        <img src="<%=comment.user.photos.icon %>">
        <a href=""><%= comment.user.login %></a>
        <%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
        </span></li>
    		<li class="content"><span class="span10"><%= raw comment.content %></span></li>
    	</ul>
    </div>
  <% end %>
</div>
<%=render :template => "people/comments/new_activity",
      :locals=> { :activity => @activity  } %>