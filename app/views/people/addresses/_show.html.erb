<div class="address address<%=address.id%> out-box">
	<div class="address-details">
		<div class="address-button">
			<h3>地址<%= index + 1 %></h3>
			<div class="pull-right">
				<a class="btn" data-toggle="modal" href="addresses/<%=address.id%>/edit" data-target="#edit_address<%=address.id%>">编辑</a>
				<%= button_to "删除", { :action => "destroy", :id => address.id }, :confirm => "确定要删除该收货地址吗？", :method => "delete", :class => "btn btn-danger" %>
			</div>
		</div>
		<div class="in-box">
			<div class="row-fluid">
				<div class="span2">
					<label class="control-label">收货地址：</label>
				</div>
				<div class="span10">
					<%= address.try(:location_without_contact) %>
				</div>
			</div>

			<div class="row-fluid">
				<div class="span2">
					<label class="control-label">联系人：</label>
				</div>
				<div class="span10">
					<%= address.try(:contact_name) %>
				</div>
			</div>

			<div class="row-fluid">
				<div class="span2">
					<label class="control-label">联系电话：</label>
				</div>
				<div class="span10">
					<%= address.try(:contact_phone) %>
				</div>
			</div>
		</div>
	</div>
	
	<div id="edit_address<%=address.id%>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
	    <h3 id="myModalLabel">编辑地址</h3>
	  </div>
	  <div class="modal-body">
	  	
	  </div>
	  <div class="modal-footer">
	    <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
	    <button class="btn btn-primary edit-button">保存</button>
	  </div>
	</div>
</div>