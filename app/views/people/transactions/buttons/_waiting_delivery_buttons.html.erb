<div class="controls pull-right">
	<div class="btn-group">
		<%= link_to '#',
					:class => 'btn btn-large',
					'event-name' => 'back_paid',
					'event-url' => trigger_event_person_transaction_path(@people, transaction, :back) do %>
			<%=raw "#{caret(:left)}&nbsp;&nbsp;&nbsp;后退" %>
		<% end %>

		<%= link_to '#', :class => 'btn btn-large btn-primary', 'event-name' => 'delivered' do %>
			<%=raw "等待发货&nbsp" %>
			<span class="clock"></span>
			<%= caret(:right, :inverse) %>
		<% end %>
		<%#= button_to event,
			  trigger_event_person_transaction_path(@people.login, @transaction, event),
			  	:class => 'btn btn-large',
		  		:method => :post %>
		<%# end %>
	</div>

</div>