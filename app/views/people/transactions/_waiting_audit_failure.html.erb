<% transfer = transaction.transfer_sheet %>
<div class="container-fluid">
  <div class='row-fluid'>
    <div class='span12'>
      <h3>审核失败，请核对你的汇款单号及信息！</h3>
    </div>
  </div>
  <form class='transfer_sheet'>
    <div class='row-fluid'>
      <div class='span2 title'>汇款人</div>
      <div class='span2 person' >
        <input type='text' name='person' class='span12' value='<%=transfer.try(:person) %>' />
      </div>
      <div class='span2 title'>汇款单号</div>
      <div class='span6 code'>
        <input type='text' name='code' class='span12' value='<%=transfer.try(:code) %>' />
      </div>
    </div>
    <div class='row-fluid'>
      <div class='span2 title'>汇款银行</div>
      <div class='span10 bank'>
        <input type='text' name='bank' class='span12' value='<%=transfer.try(:bank) %>' />
      </div>
    </div>
  </form>

  <div class='row-fluid'>
    <div class='span2 title'>运输方式</div>
    <div class='span4'>
      <%=transaction.delivery_manner.name %>
    </div>
    <div class='span2 title'>付款方式</div>
    <div class='span4'>
      <%=transaction.pay_manner.name %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span2 title">
      收货地址
    </div>
    <div class="span4">
      <%= transaction.address.try(:location) %>
    </div>
    <div class="span2 title">
      邮编
    </div>
    <div class="span4">
      <small><%= transaction.address.try(:zip_code) %></small>
    </div>
  </div>

  <% unless transaction.delivery_manner.local_delivery? %>
    <div class="row-fluid">
      <div class="span2 title">
        配送方式
      </div>
      <div class="span4">
        <%= transaction.delivery_type.try(:name) %>
      </div>
      <div class="span2 title">
        配送费用
      </div>
      <div class="span4">
        <%= number_to_currency(transaction.try(:delivery_price)) %>
      </div>
    </div>
  <% end %>
</div>
<%= render "products", :transaction => transaction, :people => people %>