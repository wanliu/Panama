<!-- 等待收货确认 -->
<div class="container-fluid">
  <div class='row-fluid'>
    <div class='offset8'>
      <a href='javascript:void(0)' class='returned-event'>
        申请退货
      </a>
      <a href='javascript:void(0)' class='delay-sign-event'>
        延长收货时间
      </a>
    </div>
  </div>
  <%= render_funcat "refund_display", :locals => {
    :transaction => transaction,
    :people => people } %>
  <div class='row-fluid'>
    <div class='span12'>
      还有
      <span class='clock' time="<%= transaction.current_state_detail.expired.to_i %>"></span>来确认收货，超时订单自动确认收货
    </div>
  </div>
  <%=render_base_template "delivery_price", :transaction => transaction %>
  <%=render_base_template "manner_and_address", :transaction => transaction %>
</div>
<div class="container-fluid">
  <%= render "products", :transaction => transaction, :people => people %>
</div>
<script type='text/javascript'>
  $(function(){
    new TransactionDelaySignView({
      el: $(".transaction-<%=transaction.id %>-<%=transaction.state %>"),
      remote_url: "<%= person_transaction_path(people, transaction)%>"
    })
  })
</script>