<!-- 等待收货确认 -->
<div class="container-fluid">
  <div class='row-fluid'>
    <div class='span12'>
      还有
      <span class='clock'></span>来确认收货，超时订单自动确认收货
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 title'>运输方式</div>
    <div class='span4'>
      <%=transaction.delivery_manner.name %>
    </div>
    <div class='span2 title'>付款方式</div>
    <div class='span4'>
      <%=transaction.pay_manner.name %>
    </div>
  </div>
  <% if transaction.delivery_manner.express? %>
  <div class='row-fluid'>
    <div class='span12'>
      <span>
        物流：<a href='javascript:void(0)'>
          <%=transaction.delivery_type.try(:name) %>
        </a>
      </span>
      <span style='margin-left: 10px;'>
        运单号：<%=transaction.delivery_code %>
      </span>
      <span>
        <a href='javascript:void(0)' class='returned-event'>申请退货</a>
      </span>
      <span>
        <a href='javascript:void(0)'>延长收货时间</a>
      </span>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4">
    </div>
    <div class="span8">
      <img src="http://maps.googleapis.com/maps/api/staticmap?center=-15.800513,-47.91378&zoom=11&size=200x200&sensor=false">
    </div>
  </div>
  <% end %>
  <div class='row-fluid'>
    <div class='span2 title'>收货地址</div>
    <div class='span10'>
      <%=transaction.address.try(:location) %>
    </div>
  </div>
</div>
<%= render "people/transactions/funcat/refund_display", :transaction => transaction, :people => people %>
<%= render "products", :transaction => transaction, :people => people %>
<script type="text/javascript">
  require(["countdown"], function(){
    expired = new Date("<%=transaction.current_state_detail.expired.strftime('%Y/%m/%d %H:%M:%S') %>")
    $('.clock', '#order<%=transaction.id %>').countdown({until: expired});
  })
</script>
