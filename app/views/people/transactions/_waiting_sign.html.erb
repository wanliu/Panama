<!-- 等待收货确认 -->
<div class="container-fluid">
  <div class='row-fluid'>
    <div class='span12' style='text-align: right;'>
      <a href='javascript:void(0)' class='returned-event'>
        申请退货
      </a>
      <a href='javascript:void(0)' class='delay-sign-event'>
        延长收货时间
      </a>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span12'>
      还有
      <span class='clock' time="<%= transaction.current_state_detail.expired.to_i %>"></span>来确认收货，超时订单自动确认收货
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 title'>运输方式</div>
    <div class='span4'>
      <%=transaction.delivery_manner.name %>
    </div>
    <div class='span2 title'>付款方式</div>
    <div class='span4'>
      <%=transaction.pay_manner.name %>
    </div>
  </div>
  <% if transaction.delivery_manner.express? %>
  <div class='row-fluid'>
    <div class='span2 title'>配送方式</div>
    <div class='span4'>
      <a href='javascript:void(0)'>
        <%=transaction.delivery_type.try(:name) %>
      </a>
    </div>
    <div class='span2 title'>配送运费</div>
    <div class='span4'><%=transaction.delivery_price %></div>
  </div>
  <div class='row-fluid'>
    <div class='span2 title'>物流公司</div>
    <div class='span4'>
      <a href='javascript:void(0)'>
        <%=transaction.logistics_company.try(:name) %>
      </a>
    </div>
    <div class='span2 title'>运单号</div>
    <div class='span4'>
      <%=transaction.delivery_code %>
    </div>
  </div>
  <% end %>
  <div class='row-fluid'>
    <div class='span2 title'>收货地址</div>
    <div class='span10'>
      <%=transaction.address.try(:location) %>
    </div>
  </div>
</div>
<%= render "people/transactions/funcat/refund_display", :transaction => transaction, :people => people %>
<%= render "products", :transaction => transaction, :people => people %>
<script type='text/javascript'>
  $(function(){
    new TransactionDelaySignView({
      el: $(".transaction-<%=transaction.id %>-<%=transaction.state %>"),
      remote_url: "<%= person_transaction_path(people, transaction)%>"
    })
  })
</script>