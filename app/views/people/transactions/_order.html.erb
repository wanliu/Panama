<%= simple_form_for @transaction, 
					:url => transaction_path(@people, @transaction),
					:html => { :class => "form-horizontal"}   do |f| %>
	<%= f.input :address, 
				:as => :chosen, 
				:collection => @people.addresses, 
				:label_method => :location, 
				:value_method => :id,
				:input_html => { :class => 'input-xxlarge' } %>
	<button class='btn'>+</button>
<% end %>