<% transfer = transaction.transfer_sheet %>
<div class="container-fluid">
  <div class='row-fluid'>
    <div class='span2 title'>汇款单号</div>
    <div class='span10 code'>
      <%=transfer.try(:code) %>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span2 title'>汇款人</div>
    <div class='span4 person' >
      <%=transfer.try(:person) %>
    </div>
    <div class='span2 title'>汇款银行</div>
    <div class='span4 bank'>
      <%=transfer.try(:bank) %>
    </div>
  </div>
  <%=render_base_template "delivery_price", :transaction => transaction %>
  <%=render_base_template "manner_and_address", :transaction => transaction %>
</div>
<div class="container-fluid">
  <%= render "products", :transaction => transaction %>
</div>