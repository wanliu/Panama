<!-- 等待付款 -->
<div class="container-fluid">
<div class="info">
  <div class="row-fluid">
    <table class="table table-striped table-images">
      <thead>
        <tr>
          <th>收货地址</th>
          <th>配送方式</th>
          <th>合计(含运费)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= transaction.address.try(:location) %></td>
          <td><%= transaction.delivery_type.try(:name) %></td>
          <td><%= number_to_currency(transaction.stotal) %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row-fluid">
    <div class="product-imgs">
      <% transaction.items[0...8].each do |item| %>
        <%= image_tag item.product.photos.icon, :class => "avatar" %>
        <span class="product-count">x<%= item.amount.to_i %></span>
      <% end %>
    </div>
  </div>
  <div class="row-fluid">
    <div class='pull-left'>
    </div>
    <div class="pull-right">
      你的余额：<%= number_to_currency(current_user.money) %>
    </div>
  </div>
</div>
  <div class="row-fluid paid_bank">
    <div class="bank-wrapper nav-tabls-wrapper">
      <ul class="nav nav-tabs">
        <li class="active">
          <a href="#bank" data-toggle="tab">
            银行卡
          </a>
        </li>
        <li>
          <a href="#payment" data-toggle="tab">
            支付平台
          </a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="bank">
          <%=form_tag payment_order_path(current_user, transaction) do |f| %>
            <div class='row-fluid'>
              <% Bank.all.each do |bank| %>
              <%= content_tag :div, :class => 'bank_card' do %>
                <%= radio_button_tag :bank, bank.code %>
                <%= label_tag "bank_#{bank.code.downcase}" do %>
                  <span class="banks bank-<%= bank.code.downcase %>">
                    <%= bank.name %>
                  </span>
                <% end %>
              <% end %>
              <% end %>
            </div>
            <input type='submit' value='支付' class='btn btn-primary' />
          <% end %>
        </div>
        <div class='tab-pane' id="payment">
          <ul class='payments-plat clearfix'>
            <li class='payment 99bill'>
              <a href='javascript:void(0)'>
                <input type='radio' value='99bill' checked style='float:left;' />
                <img src='/assets/payments/99bill.png' />
              </a>
            </li>
          </ul>

          <%= link_to "支付", payment_order_path(current_user, transaction), :class => "btn btn-primary paid-next"  %>
        </div>
      </div>
    </div>
    <div class='clearfix'></div>
    <div>
      <% if payment_mode_test? %>
        支付开启测试模式
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(function(){
    new TransactionPayment({
      el: $("#order<%=transaction.id %>"),
      model: {
        total: <%= transaction.total %>,
        money: <%= current_user.money || 0 %>
      }
    })
  })
</script>