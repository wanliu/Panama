<!-- 等待付款 -->
<div class="container-fluid">
<div class="info">
  <div class="row-fluid">
    <table class="table table-striped table-images">
      <thead>
        <tr>
          <th>收货地址</th>
          <th>配送方式</th>
          <th>合计(含运费)</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= transaction.address.try(:location) %></td>
          <td><%= transaction.delivery_type.try(:name) %></td>
          <td><%= number_to_currency(transaction.stotal) %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row-fluid">
    <div class="product-imgs">
      <% transaction.items[0...8].each do |item| %>
        <%= image_tag item.product.photos.icon, :class => "avatar" %>
        <span class="product-count">x<%= item.amount.to_i %></span>
      <% end %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="pull-right">
      你的余额：<%= number_to_currency(current_user.money) %>
    </div>
  </div>
</div>
  <% if current_user.credits.size > 0 %>
  <hr>
  <div class="row-fluid">
    <%= current_user.credits.each do |card| %>
      <%= content_tag :div, :class => 'bank_card' do %>
        <%= radio_button_tag :bank, card.bank.code %>
        <%= label_tag "bank_#{card.bank.code}" do %>
          <span class="banks bank-<%= bank.code %>"><%= card.bank.name %></span>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <% end %>
  <hr>
  <div class="row-fluid paid_bank">
    <div class="bank-wrapper">

    <% Bank.all.each do |bank| %>
      <%= content_tag :div, :class => 'bank_card' do %>
        <%= radio_button_tag :bank, bank.code %>
        <%= label_tag "bank_#{bank.code}" do %>
          <span class="banks bank-<%= bank.code %>">
            <%= bank.name %>
          </span>
        <% end %>
      <% end %>
    <% end %>
    </div>
    <div class='clearfix'></div>
    <div class="form-actions">
      <%=form_tag "https://www.99bill.com/gateway/recvMerchantInfoAction.htm", {class: "demo"} do |f| %>
        <input type="hidden" value="1" name='inputCharset' />
        <input type="hidden" name="pageUrl" value="" />
        <input type="hidden" value="<%=prefix_path %><%=receive_person_transaction_path(current_user, transaction)%>" name='bgUrl' />
        <input type="hidden" value="v2.0" name='version' />
        <input type="hidden" value="1" name='language' />
        <input type="hidden" value="4" name='signType' />
        <input type='hidden' value='VeRrdbDdOPrRKXklXkkPXBcNGjNPwJajqPnKOwzEGYwI0Xsv1DqJ3XC1jKbK\nv4uk6KL/m99GgziKdqUBA6Frbi/T8X2sVYj0Io6crEbJRmwSbg79bTHTS4M6\ni5qc9TVsTM1pFRqPtrA0MT9Uux3xwPnfIJZ8vbRFjnQ7cFe5e+I=\n' name='signMsg' />
        <input type="hidden" value="1002300593701" name='merchantAcctId' />
        <input type="hidden" value="<%=current_user.login %>" name='payerName' />
        <input type="hidden" value="1" name='payerContactType' />
        <input type="hidden" value="<%=current_user.email %>" name='payerContact' />
        <input type="hidden" value="<%=transaction.
        number %>" name='orderId' />
        <input type="hidden" value="1" name='orderAmount' />
        <input type="hidden" value="<%=DateTime.now.strftime('%Y%m%d%H%M%S') %>" name='orderTime' />
        <input type="hidden" value="<%=transaction.items[0].title %>" name='productName' />
        <input type="hidden" value="<%=transaction.items_count %>" name='productNum' />
        <input type="hidden" value="<%=transaction
        .items[0].id %>" name='productId' />
        <input type="hidden" value="" name='productDesc' />
        <input type="hidden" value="" name='ext1' />
        <input type="hidden" value="" name='ext2' />
        <input type="hidden" value="00" name='payType' />
        <input type="hidden" value="" name='bankId' />
        <input type="hidden" value="0" name='redoFlag' />
        <input type="hidden" value="" name='pid' />
        <input type='submit' value='提交' />
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  new TransactionPayment({
    el: $("#order<%=transaction.id %>"),
    model: {
      total: <%= transaction.total %>,
      money: <%= current_user.money || 0 %>
    }
  })
</script>