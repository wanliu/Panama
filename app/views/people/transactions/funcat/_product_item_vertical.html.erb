<li class='vertical'>
  <ul>
    <li class='actions'>
      <ul>
        <li class='price'>
          <%= number_to_currency(item.price) %>
        </li>
        <li class='amount'>
          <%= item.amount %>
        </li>
        <li class='total'>
          <%= number_to_currency(item.total) %>
        </li>
      </ul>
    </li>
    <li class='header'>
      <img src="<%=item.photos.icon %>" alt="<%=item.title %>" class='avatar avatar-mini' />
      <div class='title'>
        <%=item.title %>
      </div>
    </li>
  </ul>
</li>