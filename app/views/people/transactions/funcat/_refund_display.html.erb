<div class='container-fluid returned_panel'>
  <div class='span10'>
    <form class="form-horizontal">
      <div class="control-group">
        <label class="control-label">
          退货原因
        </label>
        <div class="controls">
          <select name="order_reason_id">
            <% OrderReason.all.each do |reason| %>
            <option value="<%=reason.id %>"><%=reason.name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <% if transaction.shipped_state? %>
        <div class="control-group">
          <label class="control-label">
            退运费
          </label>
          <div class="controls">
            <input type='text' name='delivery_price' class='delivery_price' value='0' />
          </div>
        </div>
      <% end %>
      <div class="control-group">
        <label class="control-label">
          退款说明
        </label>
        <div class="controls">
          <textarea name="decription" style='margin: 0px; height: 80px; width: 642px;'></textarea>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <button type="submit" class="btn">确认退货</button>
        </div>
      </div>
    </form>
  </div>
</div>
<script type='text/javascript'>
require(["jquery", "people/transaction_refund"],
  function($, TransactionRefundView){
    new TransactionRefundView({
      el: $(".transaction-<%=transaction.id %>-<%=transaction.state %>"),
      remote_url: "<%= person_transaction_path(people, transaction)%>"
    })
  })
</script>