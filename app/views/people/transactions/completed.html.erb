<% active_section :completed %>

<div class='row-fluid'>
  <div class='span8'>
    <h2 class='page-title'>已完成</h2>
  </div>
</div>
<div class='row-fluid'>
  <div class='span8'>
    <section class='widget'>
      <table class='table table-images table-hover complete'>
        <thead>
          <tr>
            <th class="span1">卖家</th>
            <th class="span2">订单编号</th>
            <th class="span3">到货地址</th>
            <th class="span2">下单日期</th>
            <th class="span1">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @transactions.each do |t| %>
            <tr class="transaction_complete-<%=t.id%>">
              <td>
                <%= image_tag t.seller.photos.icon %>
                <%= t.seller.name %>
              </td>
              <td><%= t.number %></td>
              <td style="text-align:left;"><%=t.address.try(:location) %></td>
              <td><%= t.created_at.strftime("%Y-%d-%m %H:%M") %></td>
              <td>
                <a class="btn btn-info btn-small" href="/people/<%=t.buyer.login %>/transactions/<%= t.id %>">明细</a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  </div>
</div>