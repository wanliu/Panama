<div class="order_dialog order_dialog_<%=@transaction.id %> modal fade" tabindex="-1" role="dialog" aria-labelledby="orderLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class='title'>
      编号 <%=@transaction.number %>订单
    </h3>
  </div>
  <div class="modal-body">
    <%= render partial: 'transaction',
        object:  @transaction,
        locals: {
          state:  @transaction.state,
          people: @people
      } %>
  </div>
  <div class="modal-footer toolbar">
    <%= render "state_buttons", :transaction => @transaction %>
  </div>
</div>
<script type='text/javascript'>
  $(function(){
    var card = new TransactionCard({
      el: $(".order_dialog_<%=@transaction.id %>"),
      realtime: {
        url: '<%= faye_server_uri %>',
        token: '<%= token %>' }
    });
  })
</script>
