  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= transaction.created_at %></td>
    <td><%= link_to 'Show', person_transaction_path(@people.login, transaction) %></td>
    <td><%= link_to 'Edit', edit_person_transaction_path(@people.login, transaction) %></td>
    <td><%= link_to 'Destroy', person_transaction_path(@people.login, transaction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
