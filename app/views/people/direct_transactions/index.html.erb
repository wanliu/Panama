<% active_section :direct_transaction %>
<div class='direct_transaction_list'>
  <div class='row-fluid'>
    <h4 class="page-title">
      直接交易订单
      <small>交易的清单</small>
    </h4>
  </div>

  <div class='row-fluid wrap_list'>
    <div class='span12 left-column'>
      <div class='people-groups'>
      </div>

      <div class='threeD-viewport'>
        <div class='directs card_list'>
          <%= render :partial => "direct_transactions/mini_row", :collection => @direct_transactions, :as => :row %>
        </div>
      </div>

      <div class='boxes'>
        <div class='upbox'></div>
        <div class='currentbox'></div>
        <div class='downbox'></div>
      </div>
      <%= paginate @direct_transactions %>
    </div>
    <div class='direct-detail'></div>
  </div>
</div>

<script type='text/javascript'>
  $(function(){

    new DirectTransactionList({
      el: $(".direct_transaction_list"),
      login: "<%=current_user.login %>",
      remote_url: "<%= person_direct_transactions_path(@people) %>"
    })
  })
</script>