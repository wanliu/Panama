<div class="address address<%=address.id%>">
	<div class="address-details">
		<div class="in-box">
			<div class="row-fluid">
				<div class="pull-left m-t">
					<% address.zip_code.length.times do |i| %>
						<span class="code"><%= address.zip_code[i] %></span>
					<% end %>
				</div>
				<div class="pull-right">
					<img src="/assets/beauty.jpg" class="stamp-image">
				</div>
			</div>
			<div class="row-fluid offset1" style="margin-top:-50px;">
				<address class="span8">
					<h5><%= address.try(:address_only) %></h5>
				</address>
			</div>
			<div class="row-fluid offset1">
				<div class="span2">
					<label class="control-label"><i class=" icon-user-md"></i>&nbsp;联系人：</label>
				</div>
				<div class="span10">
					<%= address.try(:contact_name) %>
				</div>
			</div>

			<div class="row-fluid offset1">
				<div class="span2">
					<label class="control-label"><i class="icon-phone-sign"></i>&nbsp;电&nbsp;&nbsp;&nbsp;话：</label>
				</div>

				<div class="span6">
					<%= address.try(:contact_phone) %>
				</div>
			</div>

			<div class="row-fluid button_group">
				<div class="pull-right">
					<a class="btn" data-toggle="modal" href="delivery_addresses/<%=address.id%>/edit" data-target="#edit_address<%=address.id%>">编辑</a>
				<%= link_to "删除", { :action => "destroy", :id => address.id }, :confirm => "确定要删除该收货地址吗？", :method => "delete", :class => "btn btn-danger" %>
				</div>
			</div>
		</div>
	</div>
	
	<div id="edit_address<%=address.id%>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="addAddressLabel" aria-hidden="true">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
			<h3 id="addAddressLabel">编辑地址</h3>
		</div>
		<div class="modal-body">
			
		</div>
		<div class="modal-footer">
			<button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
			<button class="btn btn-primary edit-button">保存</button>
		</div>
	</div>
</div>