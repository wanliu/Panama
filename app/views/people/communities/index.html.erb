<% circle_active :all %>
<% content_for :topic_right do %>
<div>
  <div class='title'>最近加入好友</div>
  <div class='content'>
    <ul class='friend-list'>
      <% friends = user_recently_friends %>
      <% if friends.count > 0 %>
        <% friends.each do |f| %>
        <li class='friend'>
          <img class='img-polaroid' src="<%=f.user.icon %>" /><%=f.user.login %>
        </li>
        <% end %>
      <% else %>
        <li>暂时没有好友...</li>
      <% end %>
    </ul>
  </div>
</div>
<div>
  <div class='title'>我可能认识的人</div>
</div>
<% end %>
<%=render partial: "people/topics/info", locals: {
  circles: @circles,
  circle: :all} %>