<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      退货原因
    </div>
    <div class="span2">
      <%= refund.order_reason.name %>
    </div>
    <div class='span1'>
      退运费
    </div>
    <div class='span2'>
      <%= number_to_currency refund.delivery_price %>
    </div>
    <div class="span2">
      退货总金额
    </div>
    <div class="span2">
      <%= number_to_currency(refund.stotal) %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span2">
      发货单号
    </div>
    <div class="span3">
      <input type='text' name='delivery_code' class='delivery_code' />
    </div>
  </div>

  <div class="row-fluid">
    <div class="span2">
      退货说明
    </div>
    <div class="span7">
      <%= refund.decription %>
    </div>
  </div>
</div>
<%=render "products", :refund => refund %>