<div class="container-fluid">
  <div class="row-fluid">
    <div class='span2'>运输方式</div>
    <div class='span4'>
      <select name='transport_type'>
      <% OrderTransportType.all.each do |k, v| %>
        <option value="<%=v.title %>"><%=v.title %></optin>
      <% end %>
      </select>
    </div>
    <div class="span2">
      发货单号
    </div>
    <div class="span4">
      <input type='text' name='delivery_code' class='delivery_code span12' />
    </div>
  </div>

  <div class='row-fluid'>
    <div class="span2">
      退货原因
    </div>
    <div class="span4">
      <%= refund.order_reason.name %>
    </div>
    <div class='span2'>
      退运费
    </div>
    <div class='span4'>
      <%= number_to_currency refund.delivery_price %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span2">
      退货说明
    </div>
    <div class="span10">
      <%= refund.decription %>
    </div>
  </div>
  <%=render "products", :refund => refund %>
</div>
