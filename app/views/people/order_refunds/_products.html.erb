<table class='table table-striped table-images' >
<% refund.items.each do |item| %>
  <tr data-value-id="<%=item.id %>">
    <td>
      <%= image_tag item.product.photos.icon %>
    </td>
    <td>
      <%= item.title %>
    </td>
    <td>
      <%= item.amount %>
    </td>
    <td>
      <%= number_to_currency(item.price) %>
    </td>
    <td>
      <%= number_to_currency(item.total) %>
    </td>
    <td></td>
  </tr>
  <% end %>
</table>

<div class='total'>
  <strong>合计：
    <span>
      <%= number_to_currency(refund.total) %>
    </span>
  </strong>
</div>