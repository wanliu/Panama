<div class="connect-<%=refund.id %> connect">
  <p>请联系万流客服：XXXX-XXXXXX</p>
</div>

<div class="container-fluid">
  <div class='row-fluid'>
    <div class='span2'>拒绝理由</div>
    <div class='span10'>
      <%= refund.refuse_reason %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span2">
      退货原因
    </div>
    <div class="span4">
      <%= refund.order_reason.name %>
    </div>
    <div class="span2">
      退运费
    </div>
    <div class="span4">
      <span class='rdp_panel' data-value="<%=refund.delivery_price %>">
        <%= number_to_currency(refund.delivery_price) %>
      </span>
      <span class='edit_rdp_panel'>
        <input type='text' value="<%=refund.delivery_price %>" name='edit_rdprice' class='span5' />
      </span>
      <a href='javascript:void(0)' class='edit_rdprice'>
        <i class='icon-edit'></i>
      </a>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span2">
      退货说明
    </div>
    <div class="span10">
      <%= refund.decription %>
    </div>
  </div>
</div>
<%=render "products", :refund => refund %>
