<div class="container-fluid">
  <% if refund.shipped_state? %>
  <div class="row-fluid">
    <div class="span2">
      运输方式
    </div>
    <div class="span4">
      <%= refund.delivery_manner.try(:name) %>
    </div>
  </div>
  <% end %>
  <% if refund.delivery_manner.present? && refund.delivery_manner.express? %>
  <div class='row-fluid'>
    <div class='span2'>物流公司</div>
    <div class='span4'>
      <%=refund.logistics_company.try(:name) %>
    </div>
    <div class='span2'>运单号</div>
    <div class='span4'>
      <%=refund.delivery_code %>
    </div>
  </div>
  <% end %>
  <div class="row-fluid">
    <div class="span2">
      退货原因
    </div>
    <div class="span4">
      <%= refund.order_reason.name %>
    </div>
    <div class="span2">
      退运费
    </div>
    <div class="span4">
      <%= number_to_currency(refund.delivery_price) %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span2">
      退货说明
    </div>
    <div class="span10">
      <%= refund.decription %>
    </div>
  </div>
  <%=render "products", :refund => refund %>
</div>