<% active_section :refunds %>
<% @refunds.each do |refund| %>
    <%= render "context", :refund => refund %>
<% end %>
<script type='text/javascript'>
  require(["jquery", "people/order_refund_card"], function($, OrderRefundCard){

    $(".transaction").each(function(i, elem){
      new OrderRefundCard({
        el: elem,
        realtime: {
          url: '<%= faye_server_uri %>',
          token: '<%= token %>'
        }
      })
    })
  })
</script>