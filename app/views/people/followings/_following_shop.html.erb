<% if followings.count > 0 %>
  <% followings.each do |f| %>
    <div class='alert alert-info follow' data-value-id="<%= f.id %>" data-value-follow-id="<%=f.follow_id %>">
      <div class='avatar'>
        <img src="<%= f.follow.try(:photos).try(:icon) %>" class="img-rounded" />
      </div>
      <div class='info'>
        <div class='href_name'>
          <a href="/shops/<%= f.follow.try(:name) %>" title="<%= f.follow.try(:name) %>">
            <%= f.follow.try(:name) %>
          </a>
        </div>
        <div>
          <label class='label label-success unfollow'>
            取消关注
          </label>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <div class='alert alert-warning notify-message'>暂时没有关注的商店</div>
<% end %>