<% active_section :followers %>

<div class='followers widget span8'>
	<div class='follow-users span8'>
		<h4 class='title'>关注我的用户</h4>
		<% if @followers.count > 0 %>
			<% @followers.each do |f| %>
				<div class='span3 alert alert-info follow'>
					<img src="<%= f.user.icon %>" class="img-rounded avatar" />
					<%= f.user.login %>
					<% unless current_user.nil? %>
						<% if current_user.is_follower?(f.user_id) %>
							<span>互相关注</span>
						<% elsif current_user != f.user %>
							<input type='button' value='关注' class='btn btn-small btn-primary' />
						<% end %>
					<% end %>
				</div>
			<% end %>
		<% else %>
			<div class='span3 alert alert-warning'>暂时没有被关注</div>
		<% end %>
	</div>
</div>