<div class="row-fluid">
	<legend class="section">登录信息</legend>
    <div class="container-fluid">
        <div class="row-fluid">
          <div class="span5">
            <div class="main_panle1 ">
              <div class="reset_avatar offset2">
                <div class="photo_span cell" >
                  <span>头像</span>
                  <img class="bottom normal_picture img-polaroid my_img">
                </div>  
                <div id="image_bottom">
                  <div class="hidden_one " id="hidden_text">请选择一张您电脑中的图片，然后点击“上传”<br>支持jpg、png、gif图片类型，不能大于1MB。<br />
                  </div>
                  <div class="update_photo_panle cant_see_me upload_user_avatar file-box" >                
                  </div>
                </div>
              </div>
            </div> 
          </div>
          <div class="span7 locate" >
          	<table>
          		<tr><td>邮箱: </td><td> <%= @people.email %></td></tr>
          		<tr><td>登录名: </td><td> <%= @people.login %></td></tr>
          	</table>
          </div>
        </div>
    </div> 
</div>

<script type="text/javascript">
  $(document).ready(function(){
    new Upload({
      verify_authenticity_token: "<%= form_authenticity_token  %>",
      action: "/users/upload_avatar/",
      current_user: { 
      	id: "<%= current_user.id %>", 
        login: "<%= current_user.login %>",
      },
      targets: [
        {el: $(".main_panle1"), input_name: "filename", photo: "<%= @people.photo.filename %>"}
      ]
    })   
  })
</script>

