<div class="content container-fluid yellow_page">
	<div class="container-fluid ">
	    <div class="row-fluid">
	      	<div class='base_info widget span9'>
	      		<h2>新入驻成员</h2>
	      		<% @new_users.each do |new_user| %>
					<div class='span3 new_user user_info' id="<%= new_user.id %>">
						<% if new_user.service_id == 1 %>
						     <img src="<%= new_user.ower_photos.icon %>" class="user_icon"/>
						<% else %>
							<img src="<%= new_user.shop_photos.icon %>" class="user_icon" />
						<% end %>
						<div  class="pull-right title"> 
							<div class="name"><a herf="#"><%= new_user.try(:user).try(:login) %></a></div>
							<div class="tel"><i class="icon-phone-sign"></i> <%= new_user.try(:phone)%></div>
						</div>
					</div>
				<% end %>
			</div>
			<div class='base_info widget span9' style="margin-left:-1px;">
				<h2>入驻买家</h2>
				<% @buyer_users.each do |buyer_user| %>
					<div class='span3 buyer_user user_info' id="<%= buyer_user.id %>">
						<img src="<%= buyer_user.ower_photos.icon %>" class="user_icon"/>
						<div  class="pull-right title"> 
							<div class="name"><a herf="#"><%= buyer_user.try(:user).try(:login) %></a></div>
							<div class="tel"><i class="icon-phone-sign"></i> <%= buyer_user.try(:phone)%></div>
						</div>
					</div>
				<% end %>
			</div>
			<div class='base_info widget span9' style="margin-left:-1px;">
				<h3>入驻卖家</h3>
				<% @seller_users.each do |seller_user| %>
					<div class='span3 seller_user  user_info' id="<%= seller_user.id %>">
						<img src="<%= seller_user.shop_photos.icon %>" class="user_icon"/>
						<div  class="pull-right title"> 
							<div class="name"><a herf="#"><%= seller_user.try(:shop_name) %></a></div>
							<div class="tel"><i class="icon-phone-sign"></i> <%= seller_user.try(:phone)%></div>
						</div>
					</div>
				<% end %>
			</div>
			<div class="span3">
				<!--排行榜-->
			</div>
	    </div>
	</div>
</div>
<script type="text/template" id = "yellow_page_hover_buyer_template" >
    <%= render "yellow_page/hover_buyer_template" %>
</script>

<script type="text/template" id= "yellow_page_hover_seller_template">
    <%= render "yellow_page/hover_seller_template" %>
</script>
<script type="text/javascript">
	$(function() {
		new YellowInfoPreview({
			el: $(".yellow_page")
		})
	})
</script>