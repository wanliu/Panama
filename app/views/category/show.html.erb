<div id="main" class="content">
	<section class="widget">
		<%= breadcrumb_button(dom_id(@category), @category.ancestors) %>
	</section>
	<div class='category_products_panel'>
		<div id="category_products">
		</div>
		<div class='load_msg'>
			<img src='/assets/loading_max.gif' />正在加载...
		</div>
	</div>
</div>


<script type="text/javascript">
	$(function(){
		new CategoryProductsView({el: '#category_products'})
		new LoadCategoryProducts({
			el: $('.category_products_panel'),
			category_id: <%= @category.id %>,
			template: Hogan.compile("<%= j render 'category/page' %>")
		})
	})
</script>