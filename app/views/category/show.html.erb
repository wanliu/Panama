<div id="main" class="content">
	<section class="widget">
		<%= breadcrumb_button(dom_id(@category), @category.ancestors, 'eye-open') do |c|  %>
			<% link_to(c.name, category_path(c)) %>
		<% end %>
	</section>
	<div class='category_products_panel'>
		<div id="category_products">
		</div>
		<div class='load_msg'>
			<img src='/assets/loading_max.gif' />正在加载...
		</div>
	</div>
</div>


<script type="text/javascript">
	$(function(){
		new ActivitiesView({
			el: '#category_products',
			wrap_id: 'category_products'
		})
		new LoadCategoryProducts({
			el: $('.category_products_panel'),
			fetch_url: "/category/shop_products?id=<%= @category.id %>",
			template: Hogan.compile("<%= j render 'category/page' %>")
		})
	})
</script>