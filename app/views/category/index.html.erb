<div id="main" class="content">
	<section class="widget">
		<%= breadcrumb_button(dom_id(@category), ["所有分类"], 'eye-open') do |name|  %>
			<% name %>
		<% end %>
	 </section>
	<div class='category_products_panel'>
		<div id="category_products"></div>
		<div class='scroll-load-msg'>
			<img src='/assets/loading_max.gif' />正在加载...
		</div>
	</div>
</div>

<script type="text/template" id="category_product-preview-template">
	<%= render "category/page" %>
</script>

<script type="text/javascript">
	$(function(){
		new ActivitiesView({
			el: '#category_products',
			wrap_id: 'category_products'
		})
		new LoadCategoryProducts({
			el: $('.category_products_panel'),
			fetch_url: "/category/shop_products"
		})
	})
</script>
