<header class="page-header">
  <!-- ie 8下面的背景 -->
  <div class='navbar-back affix-top' data-spy="affix" data-offset-top="20">
  </div>
  <div class="navbar affix-top" data-spy="affix" data-offset-top="20">
    <div class="navbar-inner">
      <%= render "topbar" %>
    </div>
  </div>
</header>

<div id="active_dialog" class="active_dialog modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">发布您的活动</h3>
  </div>
  <div class="modal-body">
    <p>正在加载...</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
    <button class="btn btn-primary save_activity">确认</button>
  </div>
</div>

<div id="ask_buy_dialog" class="ask_buy_dialog modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">发布求购信息</h3>
  </div>
  <div class="modal-body">
    <p>正在加载...</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
    <button class="btn btn-primary save_ask_buy">确认</button>
  </div>
</div>

<script type="text/javascript">
  $(function(){
    $(".save_activity").on('click', function(type){
      var $a = $(".activity_select>.active");
      var content_id = $a.find(">a").attr('href')
      var $form = $(".activity_forms>" + content_id + " form");

      // 验证人数跟价格是否为空，且必须为数字
      if (content_id == "#focus"){
        for (var i = 0;i < $(".activity_people_number").length; i++){
          $($(".activity_people_number")[i].parentElement.parentElement).removeClass("error");
          $($(".activity_activity_price")[i].parentElement.parentElement).removeClass("error");
          if ($(".activity_people_number")[i].value == "" || isNaN($(".activity_people_number")[i].value) ){
            $($(".activity_people_number")[i].parentElement.parentElement).addClass("error");
            return false;
          }
          if ($(".activity_activity_price")[i].value == "" || isNaN($(".activity_activity_price")[i].value) ){
            $($(".activity_activity_price")[i].parentElement.parentElement).addClass("error");
            return false;
          }
        }
        $form.submit();
      }

      if (content_id == "#auction"){
        $form.submit();
      }

      $form.on("ajax:success", function(){
        $form[0].reset();
        $("#active_dialog").modal('hide');
      });

      $form.on("ajax:error", function(event, xhr, state){
        $form.replaceWith(xhr.responseText);
      });

    });

    $(".save_ask_buy").on('click', function(type){
      var $form = $(".form_ask_buy");

      $form.submit();

      $form.on("ajax:success", function(){
        $form[0].reset();
        $("#ask_buy_dialog").modal('hide');
      });

      $form.on("ajax:error", function(event, xhr, state){
        $form.replaceWith(xhr.responseText);
      });
    });
  });
</script>