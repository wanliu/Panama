<% if @category %>
<ul class="breadcrumb">
  <% @category.ancestors.each do |category| %>

  	<li><%= link_to_if category.is_root?, t('frontpage'), '/category/' do %>
  			<%= link_to category.name.humanize, category %>
  		<% end %>
  		<span class="divider">/</span></li>
  <% end %>
  <li class="active">
  	<% if @category.is_root? %>
  	  <%= t('frontpage') %>
  	<% else %>
      <%= @category.name.humanize %>
    <% end %>
	</li>
</ul>
<% end %>
