<div id="category-selector" class="nav nav-collapse collapse">
    <ul id="forms-collapse-1" class="side-nav">
        <%= root_category_tree %>
    </ul>
</div>
<script type="text/javascript">
    $(function(){
        $("#category-sidebar > ul > li").mouseenter(function(event){
            $($(this).children('a').attr('href')).show();
        });
        $("#category-sidebar > ul > li").mouseleave(function(event){
            $($(this).children('a').attr('href')).hide();
        });
    })
</script>