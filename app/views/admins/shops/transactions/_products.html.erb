<table class="table table-striped table-images">
	<thead>
	<tr>
		<th>
			图片
		</th>
		<th>商品</th>
		<th>
			<%= transaction.items_count %>
		</th>
		<th><strong>小计：<%= number_to_currency(transaction.items.inject(0) {|s, n| s += n.price }) %></strong>
		</th>
		<th><strong>合计：<%= number_to_currency(transaction.stotal) %></strong>
		</th>
		<th class="relative">
			<div class="btn-group">
				<%= link_to '#', :class => "btn detials " do %>
					<%= icon :download %>
				<% end %>
				<%= link_to '#', :class => "btn print" do %>
					<%= icon :print %>
				<% end %>
			</div>

			<div class="right-frame"></div>
		</th>
	</tr>
	</thead>
	<% transaction.items.each do |item| %>
	<tr>
		<td>
			<%= image_tag item.product.photos.icon %>
		</td>
		<td>
			<%= item.title %>
			<% unless item.refund_state || transaction.refund_state? %>
				已经退货
			<% end %>
		</td>
		<td>
			<%= item.amount %>
		</td>
		<td>
			<%= item.price %>
		</td>
		<td>
			<%= item.total %>
		</td>
		<td></td>
	</tr>
	<% end %>
</table>