<table class="table table-striped table-images">
  <thead>
    <tr>
      <th>
        图片
      </th>
      <th>商品</th>
      <th>
        数量
      </th>
      <th>
        单价
      </th>
      <th>金额
      </th>
      <th class="relative">
        <div class="btn-group">
          <%= link_to 'javascript:void(0)', :class => "btn detials " do %>
            <%= icon :download %>
          <% end %>
          <%= link_to 'javascript:void(0)', :class => "btn print" do %>
            <%= icon :print %>
          <% end %>
        </div>

        <div class="right-frame"></div>
      </th>
    </tr>
  </thead>
  <tbody>
  <% transaction.items.each do |item| %>
  <tr>
    <td>
      <%= image_tag item.product.photos.icon %>
    </td>
    <td>
      <%= item.title %>
    </td>
    <td>
      <%= item.amount %>
    </td>
    <td>
      <%= item.price %>
    </td>
    <td>
      <%= item.total %>
    </td>
    <td></td>
  </tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan='6' class='stotal'>
        合计(包含运费): <%=number_to_currency(transaction.stotal) %>
      </td>
    </tr>
  </tfoot>
</table>