<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <label class="control-label">配送方式：
      </label>
    </div>
    <div class="span4">
      <label class="control-label">
      <%= transaction.delivery_type.nil? ? "暂无" : transaction.delivery_type.name %>
      </label>
    </div>
    <div class="span2">
      <label class="control-label">配送费用：
      </label>
    </div>
    <div class="span4">
      <label class="control-label">
        <%= transaction.delivery_price %>
      </label>
    </div>
  </div>
  <div class="row-fluid">
    <div class='span2'>
      <label class="control-label">快递单号：
      </label>
    </div>
    <div class='span4'>
      <label class="control-label">
        <%=transaction.delivery_code %>
      </label>
    </div>
    <div class="span2">
      <label class="control-label">付款方式：
      </label>
    </div>
    <div class="span4">
      <label class="control-label">
      <%= transaction.pay_manner.try(:name) || "暂无" %>
      </label>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span12'>
      送货地址：
      <%= transaction.address.nil? ? "暂无" : transaction.address.location %>
    </div>
  </div>
</div>
<%= render "products", :transaction => transaction %>