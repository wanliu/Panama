<% if transaction.delivery_express? %>
  <div class="row-fluid">
    <div class="span2 title">
      配送方式
    </div>
    <div class="span4">
      <label class="control-label">
      <%= transaction.delivery_type_name %>
      </label>
    </div>
    <div class="span2 title">
      配送费用
    </div>
    <div class="span4">
      <span class='dprice_panel' data-value="<%=transaction.delivery_price %>">
        <%= number_to_currency(transaction.delivery_price) %>
      </span>
      <% if transaction.pay_manner.cash_on_delivery? %>
      <span class='dprice_edit_panel'>
        <input type='text' class='span4' name='delivery_price' value="<%=transaction.delivery_price %>" />
      </span>
      <a href='javascript:void(0)' class='dprice_edit'>
        <i class='icon-edit'></i>
      </a>
      <% end %>
    </div>
  </div>
<% end %>