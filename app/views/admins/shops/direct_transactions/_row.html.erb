<div class='card_item' data-value-id='<%= row.id %>'>
  <div class='card_item_header'>
    <ul class='order_header'>
      <li class='actions'>
        <ul>
          <%= render :partial => "direct_transactions/operator", :locals => { :operator => row.operator } %>
          <li>            
            <a href="javascript:void(0)" class='btn btn-primary btn-mini open operator'>
              <%= icon :open %>打开
            </a>
          </li>
          <% if row.operator.nil? %>
          <li>
            <a href='javascript:void(0)' class="btn btn-primary btn-mini dispose">
              接单
            </a>
          </li>
          <% end %>
          <li class='state'>
            <div class='state-label label label-success'>
              <%= row.state_title %>
            </div>
          </li>
          <li class='time'>
            <%= icon :time %><%=I18n.l row.created_at, :format => :short %>
          </li>
        </ul>
      </li>
      <li class='title'>
        交易编号: <%= row.number %>
      </li>
    </ul>
  </div>

  <div class='card_item_row widget'>
    <ul class='products'>
      <li class='vertical'>
        <ul>
          <li class='actions'>
            <ul>
              <li class='price'>
                单价
              </li>
              <li class='amount'>
                数量
              </li>
              <li class='total'>
                小计
              </li>
            </ul>
          </li>
          <li class='serial'>
            <div class='title'>
              商品
            </div>
          </li>
        </ul>
      </li>
      <%= render :partial => "transactions/product_item_vertical", :collection => row.items, :as => :item, :cache => true %>
      <li class='divider'></li>
      <li class='vertical'>
        <ul>
          <li class='actions'>
            <ul>

              <li class='atotal'>
                <%=number_to_currency row.total %>
              </li>
            </ul>
          </li>
          <li class='atotal'>
            共计
          </li>
        </ul>
      </li>
    </ul>
  </div>

  <div class='full-mode'></div>
</div>