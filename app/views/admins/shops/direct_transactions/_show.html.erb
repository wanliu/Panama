<div id="direct<%=direct_transaction.id %>" class='row-fluid widget direct transaction' data-value-id="<%=direct_transaction.id %>">
  <div class='span7 direct-info'>
    <div class='row-fluid'>
      <div class='span4 avatar'>
        <img src="<%=direct_transaction.buyer.photos.header %>" class='img-polaroid' />
        <h1>
          <%=direct_transaction.buyer.login %>
        </h1>
      </div>
      <div class='span8'>
        <h4 class='pull-right'>
          <%=t "direct_transaction_state.#{direct_transaction.state.name}" %>
        </h4>
      </div>
    </div>
    <div class='row-fluid'>
      <table class='table table-striped table-images products'>
        <thead>
          <tr>
            <th>#</th>
            <th>图片</th>
            <th>商品</th>
            <th>数量</th>
            <th>单价</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% direct_transaction.items.each do |item| %>
          <tr>
            <td><%=item.id %></td>
            <td>
              <%=image_tag item.product.photos.icon %>
            </td>
            <td>
              <%= item.title %>
            </td>
            <td>
              <%= item.amount %>
            </td>
            <td>
              <%= number_to_currency(item.price) %>
            </td>
            <td>
              <%= number_to_currency(item.total) %>
            </td>
          </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan='6'>
              合计：<%= number_to_currency(direct_transaction.total) %>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>
    <div class='row-fluid'>
    </div>
  </div>
  <div class='span5 direct-message'>
    <div class='row-fluid toolbar'>
      <%= button_tag icon(:comments), :class => "btn", :type => :button %>
    </div>
    <div class='row-fluid messages'>
      <iframe frameborder="0" src="<%= dialog_shop_admins_direct_transaction_path(current_shop, direct_transaction) %>">
      </iframe>
    </div>
  </div>
</div>