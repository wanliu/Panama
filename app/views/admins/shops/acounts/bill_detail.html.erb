<% admin_active_section :bill_detail %>

<div class='row-fluid'>
	<div class='span7 widget bill_detail'>
		<section>
			<header>
				<h4><i class="icon-user"></i>个人账户</h4>
			<header>
			<div class='body'>
				<div class='row-fluid'>
					<div class='span4 text-center cell'>
						<img src="<%= @people.photos.header %>" class='img-circle' alt='头像' />
					</div>
					<div class='span8'>
						<dl class="dl-horizontal">
							<dt>用户名</dt>
							<dd><%= @people.login %></dd>
						</dl>
						<dl class="dl-horizontal">
							<dt>E-mail</dt>
							<dd><%= @people.email %></dd>
						</dl>
						<% if can?(:manage, User) %>
							<dl class="dl-horizontal">
								<dt>余 额</dt>
								<dd><%=@people.money %></dd>
							</dl>
						<% end %>
					</div>
				</div>
			</div>
		</section>
		
		<div class='body'>
			<% if can?(:manage, User) %>
				<section>
					<header>
						<h4><i class="icon-list-ol"></i>进出帐</h4>
					<header>
				</section>
				<div class='body'>
					<table class='table table-striped table-images'>
						<thead>
							<tr>
								<th>流水号</th>
								<th>金 额</th>
								<th>支付类型</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% if !@people.money_bills.present? %>
								<tr><td colspan="4">您还没有交易记录</td></tr>
							<% else %>
								<% @people.money_bills.each do |bill| %>
									<tr>
										<td><%= bill.serial_number %></td>
										<td><%= bill.money %></td>
										<td><%= bill.owner_name %></td>
										<td><%= bill.owner_value %></td>
									</tr>
								<% end %>
							<% end %>
						</tbody>
					</table>
				</div>
			<% end %>
		</div>
	</div>
</div>