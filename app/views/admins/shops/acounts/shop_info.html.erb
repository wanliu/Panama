<% admin_active_section :shop_info %>

<div class='row-fluid'>
  <div class='span7 widget'>
    <!-- <head> <h4>商店信息</h4></head> -->
    <fieldset>
    <%= simple_form_for @shop_auth,
    url: '/user_checkings/update_shop_auth',
    html: { method: :put, class: "form-horizontal shop_auth" } do |f| %>
        <legend class="section">商店信息</legend>
          <div class="container-fluid">
            <div class="row-fluid">
              <div class="span5">
                <div class="main_panle1">
                  <div class="reset_avatar offset1">
                    <div class="photo_span cell" >
                        <span>商店图标</span>
                        <img class="bottom normal_picture img-polaroid offset1 my_img"/>
                    </div>  
                    <div id="image_bottom" class="tool">
                        <div class="hidden_one" id="hidden_text">(请点击“上传头像”，然后从电脑中选择小于1MB的目标图片（jpg、png、gif）<br />
                        </div>
                        <div class="update_photo_panle cant_see_me upload_user_avatar file-box" >                
                        </div>
                    </div>
                  </div>
                </div> 
              </div>
              <div class="span7 locate" style="margin-left:-20px">
                <%= f.input :shop_name, label: '商店名称' %>
                <%#= f.input :shop_url, label: '商店地址' %>
                <%= f.input :shop_summary, label: '商店简介' %>
              </div>
            </div>
          </div>
          
          <legend class="section">营业信息</legend>

          <div class="container-fluid">
            <div class="row-fluid">
              <div class="span5">
                <div class="main_panle2">
                  <div class="reset_avatar offset1">
                    <div class="photo_span cell" >
                      <span> 营业执照</span>
                      <img class="bottom normal_picture img-polaroid offset1 my_img"/>
                    </div>  
                    <div id="image_bottom" class="tool">
                      <div class="hidden_one" id="hidden_text">（请点击“上传头像”，然后从电脑中选择小于1MB的目标图片（jpg、png、gif）<br />
                      </div>
                      <div class="update_photo_panle cant_see_me upload_user_avatar file-box" >                
                      </div>
                    </div>
                  </div>
                </div> 
              </div>
              <div class="span7 locate1" style="margin-left:-20px">
                <%= f.input :company_name, label: '营业店名' %>
                <%= f.input :company_address, label: '营业地址' %>
                <%= f.input :company_license, label: '营业执照号' %>
              </div>
            </div>
          </div>


          <legend class="section">个人信息</legend>
          <div class="container-fluid">
            <div class="row-fluid">
              <div class="span5">
                <div class="main_panle3 row-controls ">
                  <div class="reset_avatar offset1">
                    <div class="photo_span cell" >
                      <span> 法人头像</span>
                      <img class="bottom normal_picture img-polaroid offset1 my_img" />
                    </div>  
                    <div id="image_bottom" class="tool">
                      <div class="hidden_one " id="hidden_text">（请点击“上传头像”，然后从电脑中选择小于1MB的目标图片（jpg、png、gif）<br />
                      </div>
                      <div class="update_photo_panle cant_see_me upload_user_avatar file-box" >                
                      </div>
                    </div>
                  </div>
                </div> 
              </div>
              <div class="span7 locate1" style="margin-left:-20px">
                <%= f.input :ower_name, label: '法人姓名' %>
                <%= f.input :ower_shenfenzheng_number, label: '身份证号' %>
                <%= f.input :phone, label: '联系电话' %>
              </div>
            </div>
          </div>
        <% end %>
        <% if !current_user.user_checking.checked %>
        <button class="modify">修改</button>
        <% else %>
        <script type="text/javascript">
            $("input").attr("readonly","readonly");
            $(".tool").each(function(){
              $(this).hide();
            });
        </script>
        <% end %>
        </fieldset>
    </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    new Upload({
      verify_authenticity_token: "<%=form_authenticity_token  %>",
      current_user: { id: "<%=current_user.id %>", 
        login: "<%= current_user.login %>",
      },
      targets: [
        {el: $(".main_panle1"), input_name: "shop_photo", photo: "<%= @user_checking.try(:shop_photo) %>"},
        {el: $(".main_panle2"), input_name: "company_license_photo", photo: "<%= @user_checking.try(:company_license_photo) %>"},
        {el: $(".main_panle3"), input_name: "ower_photo", photo: "<%= @user_checking.try(:ower_photo) %>"}
      ]
    })   
  });

  $(".modify").bind("click",function(){
    $(".shop_auth").submit();
  })
</script>