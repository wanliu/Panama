<div class="container-fluid">
  <div class="row-fluid">
    <div class="span1">
      退货原因:
    </div>
    <div class="span3">
      <%= refund.order_reason.name %>
    </div>
    <div class="span1">
      <label class="control-label">退货总金额:</label>
    </div>
    <div class="span3">
      <%= number_to_currency(refund.stotal) %>
    </div>
    <div class="span1">
      发货单号:
    </div>
    <div class="span3">
      <%= refund.delivery_code %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span1">
      退运费:
    </div>
    <div class="span3">
      <%= number_to_currency refund.delivery_price %>
    </div>
    <div class="span1">
      <label class="control-label">退货说明:</label>
    </div>
    <div class="span7">
      <%= refund.decription %>
    </div>
  </div>
</div>
<%=render "products", :refund => refund %>