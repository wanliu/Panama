
  <div class="row-fluid">
    <div class="span2">
      退货原因:
    </div>
    <div class="span2">
      <%= refund.order_reason.name %>
    </div>
    <div class="span2">
      <label class="control-label">退货总金额:</label>
    </div>
    <div class="span2">
      <%= number_to_currency(refund.stotal) %>
    </div>
    <div class="span1">
      退运费:
    </div>
    <div class="span2">
      <%= number_to_currency refund.delivery_price %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span2">
      发货单号:
    </div>
    <div class="span4">
      <%= refund.delivery_code %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span2">
      <label class="control-label">退货说明:</label>
    </div>
    <div class="span6">
      <%= refund.decription %>
    </div>
  </div>

<%=render "products", :refund => refund %>