<div class="container-fluid">
  <%=render "admins/shops/order_refunds/base/reason" %>
  <div class='row-fluid'>
    <div class='span12'>
      你还有<span class='clock' time="<%= refund.current_state_detail.expired.to_i %>"></span>延时了，请及时答复!
    </div>
  </div>
  <div class="row-fluid">
    <div class="span2">
      退货原因
    </div>
    <div class="span4">
      <%= refund.order_reason.name %>
    </div>
    <div class="span2">
      退运费
    </div>
    <div class="span4 delivery_price">
      <%= number_to_currency(refund.delivery_price) %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span2">
      退货说明
    </div>
    <div class="span10">
      <%= refund.decription %>
    </div>
  </div>
  <%=render "products", :refund => refund %>
</div>