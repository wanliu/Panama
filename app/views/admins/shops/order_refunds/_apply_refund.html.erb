<div class="container-fluid">
  <div class='row-fluid refuse-panel'>
    <div class='span2'>拒绝理由:</div>
    <div class='span9'>
      <textarea class='span10' name='refuse_reason' style='height:81px'></textarea>
    </div>
    <div class='span1' style="margin-left:-50px;">
      <input type='button' event-name="refuse" class='btn btn-primary refuse-confirm disabled' value='确认' />
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span12'>
      你还有<span class='clock'></span>延时了，请及时答复!
    </div>
  </div>
  <div class="row-fluid">
    <div class="span2">
      退货原因:
    </div>
    <div class="span2">
      <%= refund.order_reason.name %>
    </div>
    <div class="span1">
      退运费:
    </div>
    <div class="span2">
      <%= number_to_currency(refund.delivery_price) %>
    </div>
    <div class="span2">
      <label class="control-label">退货总金额:</label>
    </div>
    <div class="span2">
      <%= number_to_currency(refund.stotal) %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span2">
      <label class="control-label">退货说明:</label>
    </div>
    <div class="span10">
      <%= refund.decription %>
    </div>
  </div>
</div>
<%=render "products", :refund => refund %>
