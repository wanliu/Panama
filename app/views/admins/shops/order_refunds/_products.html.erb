<div class="products">
  <div class="products-head">
      <% refund.items[0...5].each do |item| %>
        <div class="img-header">
        <%= image_tag item.product.photos.header %>
        </div>
      <% end %>
      <span class='ellipsis'>...</span>
      <div class="toolbar ">
      <%= link_to '#', :class => "btn btn-large item-detail" do %>
          <%= icon :download %>
        <% end %>
      </div>
  </div>
  <div class="item-details">
    <table class="table table-striped table-images">
      <thead>
      <tr>
          <th class="hidden-phone-portrait">#</th>
          <th>图片</th>
          <th>商品</th>
          <th class="hidden-phone-portrait">数量</th>
          <th class="hidden-phone">单价</th>
          <th class="hidden-phone">金额</th>
      </tr>
      </thead>
      <tbody>
      <% refund.items.each do |item| %>
        <tr data-value-id="<%= item.id %>">
          <td><%= item.id %></td>
          <td><%= image_tag item.product.photos.icon %></td>
          <td><%= item.title %></td>
          <td><%= item.amount %></td>
          <td><%= number_to_currency(item.price) %></td>
          <td><%= number_to_currency(item.total) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class='total'>
  <strong>合计：
    <span>
      <%= number_to_currency(refund.total) %>
    </span>
  </strong>
</div>