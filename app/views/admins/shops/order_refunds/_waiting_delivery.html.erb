<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      运输方式
    </div>
    <div class="span4">
      <%= refund.delivery_manner.try(:name) %>
    </div>
    <div class="span2">
      退运费
    </div>
    <div class="span4">
      <%= number_to_currency(refund.delivery_price) %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span2">
      退货原因
    </div>
    <div class="span10">
      <%= refund.order_reason.name %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span2">
      退货说明
    </div>
    <div class="span10">
      <%= refund.decription %>
    </div>
  </div>
</div>
<%=render "products", :refund => refund %>