<div id="page" >
	<div class="row-fluid">
		<%= link_to t(:create), '#', :class => 'btn' %>
	</div>
	<div class="row-fluid">
		<%= render_widget :table, :display, @children, nil, 
			:adapter => :tree_table,
			:heads => [:name, :created_at, :updated_at, :util],
			:head_options => { 
				:class => %w(table table-striped table-bordered table-hover)
			},
			:add_column => [ {:util => proc do |row|
				content_tag :div, :class => 'btn-group' do 
					link_to(icon(:edit), "#/#{row[:_id]}/edit", :class => 'btn utils edit') +
					link_to(icon(:remove), "#", :'data-delete-url' => "#{row[:_id]}", :class => 'btn utils delete')
				end
			end }],
			:modify_column => [{:name => proc do |row|
				content_tag :div, :class => 'btn-group' do
					text_field_tag(:name, row[:name]) +
					link_to(icon(:plus), "#", :class =>'btn')
				end				
			end }],
			:hide_column => [:_id], 
			:children_field => :children
		%>
	</div>
</div>
<script type="text/javascript">
	$("#table")
</script>
