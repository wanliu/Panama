<% admin_active_section :shop_banks %>
<div class='row-fluid shop_banks'>

  <div class='span8 widget'>
    <h4>创建银行帐户</h4>
    <div class='row-fluid create_bank'>
      <%= form_tag shop_admins_shop_banks_path(current_shop)  %>
      <div class='span10 bank_info'>
        <div>
          <div class='row-fluid'>
            <div class='span2'>
              银行
            </div>
            <div class='span4'>
              <select class='bank span12' name='shop_bank[bank_id]'>
                <% Bank.all.each do | bank | %>
                <option value="<%=bank.id %>">
                  <%=bank.name %>
                </option>
                <% end %>
              </select>
            </div>
            <div class='span2'>
              开户姓名
            </div>
            <div class='span4'>
              <input type='text' class='name span12' name='shop_bank[name]' />
            </div>
          </div>
          <div class='row-fluid'>
            <div class='span2'>
              帐户
            </div>
            <div class='span10'>
              <input type='text' class='span12' name='shop_bank[code]' />
            </div>
          </div>
        </div>
      </div>
      <div class='span2 toolbar'>
        <input type='submit' class='btn btn-primary' value='添加' />
      </div>
      </form>
    </div>
    <h4>银行帐户</h4>
    <table class='table table-striped table-images'>
      <thead>
        <tr>
          <th>银行</th>
          <th>开户姓名</th>
          <th>帐户</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
      <% @shop_banks.each do |shop_bank| %>
      <tr id="<%= shop_bank.id %>">
        <td class='bank-wrapper'>
          <div class="bank_card">
            <label for="bank_<%=shop_bank.bank.code %>">
              <span class="banks bank-<%=shop_bank.bank.code %>">
                <%=shop_bank.bank.name %>
              </span>
            </label>
          </div>
        </td>
        <td><%=shop_bank.name %></td>
        <td><%=shop_bank.code %></td>
        <td><a href="#" class="delete_bank">删除</a></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class='span4'>
  </div>
</div>
<script type="text/javascript">
  $(function(){
    $(".delete_bank").bind("click",function(event){
      debugger
      shop_id = "<%= @shop_banks.try(:first).try(:shop_id) %>";
      tr = event.target.parentElement.parentElement;
      id = $(tr).attr("id");
      $.ajax({
        type: "delete",
        url: " /shops/<%= current_shop.name %>/admins/shop_banks/"+id,
        dataType: "json",
        success: function(){
          tr.remove()
        } 
      })
    })
  })
</script>