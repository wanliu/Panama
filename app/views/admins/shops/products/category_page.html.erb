  <style>
    /* Prevents slides from flashing */
    .slides {
      display:none;
    }
  </style>
<div class='container-fluid'>
	<div class='row-fluid'>
		<form class="form-search span12">
		  <div class="input-append span12">
		    <input type="text" class="span11 search-query">
		    <button type="submit" class="btn">Search</button>
		  </div>
		</form>
	</div>
	<div class="row-fluid">
		<ul class="nav nav-tabs nav-stacked span3">
		  <li class="active">
		  	<a href="#">婴幼食品</a><br>
		  	<% @categorys.children.each do |c| %>
		  		<a href="#" class="categorys_root" data-value="<%= c.name %>"><%= c.name %></a>
		  	<% end %>
		  </li>
		</ul>
		<div class="category-preview  span9">
		</div>
	</div>

</div>
<template id="categorys_template" style="display:none;">

	<div class="category_list span9">
		<div class="category_cover ">
			{{#categorys}}
			<div class="category_detail">
				<p class="lead">{{category.name}} 预览效果</p>
				<div class="slides-box">
				  <div class="slides">
				    <img src="{{category.cover.url}}">
				    <img src="https://dl.dropbox.com/u/5992070/images/2.png">
 					<a href="#" class="slidesjs-previous slidesjs-navigation"><i class="icon-chevron-left icon-large"></i></a>
      				<a href="#" class="slidesjs-next slidesjs-navigation"><i class="icon-chevron-right icon-large"></i></a>
				  </div>
				</div>
				<p>页面构成 <strong>商品层示图片</strong> <strong> 商品略缩图</strong> <strong>价目信息</strong> <strong> 一般属性</strong> <strong>商品层示图片</strong></p>
				<div class="controls">
					<button class="btn btn-success">选择这种</button>
				</div>
			</div>
			<hr>
			{{/categorys}}
		</div>
	</div>

	<div class="sub_category span3">
		<div class='shadow'>
		</div>
		<div class="category_buttons btn-group btn-group-vertical">
			<button class='btn' data-value="back">返回<span class="caret left"></span></button>
		    {{#categorys}}
		    <button class='btn' data-value="{{category.name}}">{{category.name}}
		        {{#category.status}}
		            <span class="caret right"></span>
		        {{/category.status}}
		    </button>
		    {{/categorys}}
		</div>
	</div>

</template>

<script type="text/javascript">
	require(['jquery', 'hogan', 'category'], function ($, Hogan, view){
		template = Hogan.compile($("#categorys_template").html());
		new view.Category({
			shop_name: "<%= current_shop.name %>",
			el: $(".container-fluid"),
			template: template
		});
	});

</script>
