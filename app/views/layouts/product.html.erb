<!DOCTYPE html>
<%# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither %>
<%= html_tag :class => "no-js" %>
<%= render "head", :styles => [:products], :javascripts => [:panama] %>
  <body class="<%= controller.controller_name %>" style="zoom: 1">
    <%= render "chromeframe" %>
    <%= render "logo" %>
    <div class="wrap">
        <%= render "header" %>
        <%= render "category_breadcrumbs" %>
        <div class='content container-fluid'>
          <%= yield %>
        </div>
    </div>     
    <div id="popup-layout"></div>
    <%= render "right_sidebar" %>
    <%#= render 'header' %>
    <%= render "footer" %>
    <%# Javascript at the bottom for fast page loading %> 
    <div class='footer_nav'>
      <%#= render_widget :chat %>
      <%#= render_widget :my_cart %>
    </div>

    <%= render "baidu_analyzer" %>
    <div class='footer_nav'>
      <%#= render_widget :chat %>
      <%#= render_widget :my_cart %>
    </div>
</body>
