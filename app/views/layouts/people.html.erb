				</ul>
				<script type="text/javascript">
					require(['jquery'], function($){
						$(".people-<%= yield :people_siderbar %>").parents("li").addClass("active")
					});
				</script>
				</div>

			</div>
			<div id='main-body' class="container-fluid">
				<div class="row-fluid">
					<%= yield %>
				</div>
			</div>
	   	    <%= render "footer" %>
		</div>
	</div>
    <%= render_widget :my_cart %>
</body>
</html>