				<h1><%= @people.login %></h1>
				<span class="label">Default</span>
				<span class="label">Default</span>
				<span class="label">Default</span>				
				<hr>
				<div class="well">
				<ul class="nav nav-list">
					<li class="nav-header">购物</li>
					<li><a class="people-cart" href="<%= person_cart_index_path(current_user.login) %>"><i class="icon-chevron-right"></i> 购物车</a></li>
