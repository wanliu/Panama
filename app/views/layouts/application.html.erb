<!DOCTYPE html>
<%# http://paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither %>
<%= html_tag :class => "no-js" %>
  <%#= cache do %>
  <meta property="wb:webmaster" content="dbb1f735ab507967" />
    <%= render "head", :styles => ['application'], :javascripts => ['application'] %>
  <%# end %>
  <body class="<%= controller.controller_name %>" style="zoom: 1">
    <script type="text/javascript"></script>
    <%= render "chromeframe" %>
    <%= render "logo" %>
    <%= render "left_sidebar" %>
    <div class="wrap">
      <%= render "header" %>
      <%= yield %>
    </div>
    <div id="popup-layout"></div>
    <script type="text/javascript">
      $(function(){
        if (typeof window.caramal_client === 'undefined'){
          window.caramal_client = CaramalClient.connect({
            url: 'localhost',
            token: '<%= current_user.im_token %>' 
            // token: '04852f816d49f6ea9dcc647203e7d1a0'
          })
        }
      })
    </script>
    <%= render "right_sidebar" %>
    <%#= render 'header' %>
    <%= render "footer" %>
    <%# Javascript at the bottom for fast page loading %>
    <%= render "baidu_analyzer" %>

  </body>
</html>
