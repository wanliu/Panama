<div class="container-fluid offset2 span8">
  <div class='row-fluid'>
    <div class='span12'>
      <h2 class="page-title">企业信息验证</h2>
    </div>
  </div>
  <div class='row-fluid wrapper-box'>
    <%= simple_form_for @user_auth, 
            url: '/completing_people/authenticate_license', 
            html: { method: :put, class: "form-horizontal" } do |f| %>
      <div class="span5">
        <%= f.input :company_name, label: '企业名称' %>
        <%= f.input :company_photo, label: '企业Logo', as: 'file' %>
        <%= f.input :company_address, label: '营业地址' %>
        <%= f.input :company_summary, label: '企业简介' %>

        <%= f.input :business_license_num, label: '营业执照号' %>
        <%= f.input :license_photo, label: '营业执照图片', as: 'file' %>
      </div>
      <div class="span5">
        <%= f.input :company_legal, label: '企业法人' %>
        <%= f.input :legal_id_number, label: '身份证号' %>
        <%= f.input :id_card_photo, label: '身份证图片', as: 'file', hint: '人和身份证一起' %>
        <%= f.input :legal_contact, label: '法人电话' %>
        <div class="control-group">
          <div class="controls">
            <button type="submit" class="btn">下一步</button>
            <%= link_to '跳过', next_wizard_path, :class => 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
