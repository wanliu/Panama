<script type="text/javascript" src="http://api.map.baidu.com/api?key=46ce9d0614bf7aefe0ba562f8cf87194&v=1.0&services=false"></script>
<div class="container-fluid offset2">
  <div class="page-header">
    <h1>验证您的工商营业执照</h1>
  </div>
  <%= simple_form_for @user_auth, 
        url: '/completing_people/authenticate_license', 
        html: { method: :put, class: "span8 form-horizontal" } do |f| %>
    <%= f.input :company_name, label: '企业名称' %>
    <%= f.input :company_legal, label: '企业法人', hint: 'No special characters.' %>
    <%= f.input :company_address, label: '营业地址' %>
    <div class="control-group">
      <div class="controls">
        <button type="submit" class="btn">下一步</button>
        <%= link_to '跳过', next_wizard_path %>
      </div>
    </div>
  <% end %>
</div>