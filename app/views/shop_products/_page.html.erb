<div class="shop_product" shop-product-id="{{id}}" style="display: inline-block">
	<div class='out-box'>
		<div class='in-box'>
			{{#product}}
			<img src="{{photo_avatar}}" class='preview a-{{id}}' />
			{{/product}}
			<div class='summary'>
				<h5 class="title">
					{{name}}
				</h5>
				<p>{{product.description}}</p>
				<div class='price'>价格: {{price}}</div>
			</div>
		</div>
	</div>
</div>