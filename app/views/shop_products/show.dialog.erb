<% product = @shop_product.product %>
<% shop = @shop_product.shop %>
<div class="container shop_product_<%=@shop_product.id %>" data-value-id="<%=@shop_product.id %>">
  <div class="row-fluid ">
    <div class="offset2 span8">
      <!-- 主展示框 -->
      <div id="main-modal" class="dialog">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h3><%= product.name %></h3>
        </div>
        <div class="modal-body main-show">
          <div class='row-fluid'>
            <div class="span5 preview">
              <%= image_tag product.photos.preview, :id => 'zoom_01', "data-zoom-image" => "http://www.elevateweb.co.uk/wp-content/themes/radial/zoom/images/large/image3.jpg" %>
              <script type="text/javascript">
              $("#zoom_01").elevateZoom();
              </script>
            </div>
            <div class="span7 property">
              <div class="row-fluid">
                <div class="span12">
                <% if shop.present? %>
                <%= link_to t(:enter_shop, :name => shop.try(:name)),
                      shop_path(shop.try(:name)),
                      :class => 'btn pull-right' %>
                <% end %>
                <h5><%= product.name %></h5>
                <p><small><%= product.summary %></small></P>
                <hr>
                  <%= simple_form_for ProductItem.new,
                    :url => person_transactions_path(current_user),
                    :html => {:class => 'form-horizontal' } do |f| %>
                    <input type='hidden' value="<%=@shop_product.id %>" name="shop_product_id" />
                    <div class="control-group">
                      <label class="control-label" for="inputEmail">
                        价格
                      </label>
                      <div class="controls">
                        <p class="text-surprised sub-product-price">
                          <%= product.price %>
                        </p>
                      </div>
                      <label class="control-label" for="inputEmail">
                        配送
                      </label>
                      <div class="controls">
                        <p class="text-surprised send-product-price">
                          <%= product.price %>
                        </p>
                      </div>
                      <label class="control-label" for="inputEmail">
                        商品评分
                      </label>
                      <div class="controls">
                        <p class="star"></p>
                        <script type="text/javascript">
                          $(".star").raty({
                            readOnly : true,
                            score    : 4,
                            path     : "/assets/raty"
                          })
                        </script>
                      </div>
                    </div>

                    <%= f.input :amount, :as => :spinner, :input_html => { :class => "amount" } %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class='row-fluid' style='margin-top: 20px'>
            <div class='span12'>
              <ul class="nav nav-tabs">
                <li class="active"><a href="#">商品详细</a></li>
                <li><a href="#">评论</a></li>
                <li><a href="#">Messages</a></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="modal-footer toolbar">
          <div class="control-group">
            <div class="control pull-right">
              <input class='btn btn-primary btn-large' type='button' value='快递购买' />
              <input class="btn btn-primary btn-large buy" value="购买" type="button">
              <%= add_to_my_cart("Add To Cart", ".shop_product_#{@shop_product.id} .preview") %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    new ShopProductToolbar({
      login: "<%=current_user.login %>",
      el: $(".shop_product_<%=@shop_product.id %>")
    })
  })
</script>