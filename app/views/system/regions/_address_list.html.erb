<div class="controls ">
    <div class="address_select">
        <span style="font-size: 16px;padding-right: 10px;">请选择省、市</span>
        <select class="address_province_id">
            <option>==请选择省==</option>
        </select>
        <select class="address_city_id">
            <option>==请选择市==</option>
        </select>
        <select class="address_area_id" style="display:none">
            <option>==请选择市==</option>
        </select>
    </div>
    <div class=" row-fluid">
        <ul class="city_list">
        </ul>
    </div>
    <div class="address row-fluid">
        <div class='confirm_choice span2'>
            <button class="btn">确定</button>
        </div>
        <ul class="address_part_list">
            <% @region.region_cities.each do |city| %>
                <li id="<%=city.city_id %>"><%=City.find(city.city_id).try(:name) %><i class="icon-remove"></i></li>
            <% end %>
        </ul>
    </div>
</div>

<script type="text/javascript">
$(function(){
    new SelectRegionView({
      el: $(".address_select")
    })
})
</script>