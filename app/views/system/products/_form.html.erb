<script>
		function admin_category_selector(el) {
			if (el instanceof jQuery) {
				this.el = el;
			} else {
				this.el = $(el);
			}


			this.ul = this.el.next()//.children('ul');
			this.ul.find('ul').css('display', 'none');

			this.ul.find('li').on('mouseenter', function(e){
				$(this).children('ul').show();
			})

			this.ul.find('li').on('mouseleave', function(e){
				$(this).find('ul').css('display', 'none');
			})
		}

		$(function(){
			admin_category_selector("input#product_category_id");
		})
</script>
