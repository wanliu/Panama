<%= stylesheet_link_tag "system/product" %>
<%= semantic_form_for product, :method => :put do |f| %>
  <%= f.inputs "Product" do %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :category, :as => :category %>
    <%= f.input :summary %>
    <%= f.input :brand_name %>
    <%= f.input :description, :as => :text %>
    <%= f.input :attachments, :as => :aplum %>
  <% end %>
  <%= f.actions %>
<% end %>


