<div class='shop_info' id="{{ id }}">
  <div class="hover_place">
    <div class='info_detail' user-id='{{ id }}' >
        <div class="bg_nature"><img src="http://lorempixel.com/240/150/nature" /></div>
        <div class='userinfo'>
          <div class="circle_avatar">
            <img src='{{ shop.photos.icon }}', class="author" />
          </div>
          <div class="shop_name">
            <a href="/shops/{{ shop.name }}">{{ shop.name }}</a>
          </div>
          <div class="industry_type">
            <span>行业：{{ industry_type }} </span>
          </div>
          <div class="tel">
            <span>联系方式：{{ phone }}</span>
          </div>
          <div class="entry">
            <button><a href="/shops/{{ shop.name }}">进入商铺</a></button>
          </div>
          <div class="contact">
            <a href="#"><i class="icon-leaf"></i></a>
          </div>
        </div>
    </div>
    <span class="label label-important pull-right">卖家</span>
    <a href="/shops/{{ shop.name }}">
      <img src="{{ shop.photos.header }}" class="avatar" />
    </a>
  </div>
  <div  class="content">
    <div class="name">
      <i class="icon-user"></i>
      <a href="/shops/{{ shop.name }}" class="title">{{ shop.name }}</a>
    </div>
    <div class="industry">
      <i class="icon-star"></i>
      <a href="#">{{ industry_type }}</a>
    </div>
  </div>
</div>