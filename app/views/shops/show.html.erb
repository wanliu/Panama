<div class="content container-fluid">
  <div class='row-fluid'>
    <div class='span12'>
      <h2 class='page-title'>商店<%=@shop.name%></h2>
    </div>
  </div>
  <div class='row-fluid'>
    <div id="main" class="content">
      <div id="shop_products">
        <% (0...@shop_products.size).group_by { |i| i % 4 }.each do |_, indexs| -%>
          <div class="column">
            <% indexs.each do |index| %>
              <%= render "shop_products/preview", shop_product: @shop_products[index] %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>  
</div>
