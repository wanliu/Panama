<div id="main" class="content">
	<section class="widget">
		<div class="body">
			<h3 class='page-title'>商店<%= @shop.name %></h3>
		</div>
	</section>
	<div class='shop_products_panel'>
		<div id="shop_products">
		</div>
		<div class='load_msg'>
			<img src='/assets/loading_max.gif' />正在加载...
		</div>
	</div>
</div>

<script type="text/javascript">
	$(function(){
		new ShopProductsView({el: '#shop_products'})
		new LoadShopProducts({
			el: $('.shop_products_panel'),
			shop_id: <%= @shop.id %>,
			template: Hogan.compile("<%= j render 'shop_products/page' %>")
		})
	})
</script>
