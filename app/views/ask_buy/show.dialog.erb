<div class='dialog-panel'>
  <div class="container">
    <div class="row-fluid ">
      <div class="offset1 span7">
        <!-- 主展示框 -->
        <div id="main-model" class="dialog">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3><%=@ask_buy.title %> 求购</h3>
          </div>
          <div class="modal-body main-show">
            <div class='picture'>
              <img class="preview" src="<%=@ask_buy.photos.default %>" />
            </div>
            <h4 class="right_bottom2 animate1 fadeInRight">价格: <span><%=@ask_buy.price %></span>
            数量：<span><%=@ask_buy.amount %></span>
            </h4>
            <h4>商品描述：</h4>
            <span style="word-wrap:break-word;margin-left:10px;">
              <%=@ask_buy.describe %>
            </span>
          </div>
          <div class="modal-footer">
            <div class="big_comments_and_reply">
              <div class="comments">
              </div>
              <div class="reply_form">
                <div class='user-info'>
                  <img src="<%= current_user.photos.icon %>">
                  <a href='javascript:void(0)'>
                    <%= current_user.login %>
                  </a>
                </div>
                <div class='message'>
                  <textarea name='content' placeholder="发表评论..."></textarea>
                </div>
                <button class="submit-comment disabled btn btn-danger">评论</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="span3">
        <div class="dialog">
          <div class="modal-body">
            <img class="author_image" src="<%=@ask_buy.user.photos.icon %>" />
            <h4><%=@ask_buy.user.login %></h4>
            <p>关注 55</p>
            <p>粉丝 100</p>
          </div>
          <div class="modal-footer">
          </div>
        </div>

        <div class="dialog" id="purchase-forms">
          <div class="modal-body">
              <label class="decimal optional control-label" for="product_item_price">
                价格
              </label>
              <input type='text' class='span12' value="<%=@ask_buy.price %>"  readonly=true />
              <div class="control-group integer optional">
                <label class="integer optional control-label" for="product_item_amount">
                  数量
                </label>
                <div class="controls">
                  <input class="numeric integer span12" name="" readonly=true type="number" value="<%=@ask_buy.amount %>">
                </div>
              </div>
          </div>
          <div class="modal-footer">
            <div class="btn-group">
            <% if current_user.is_seller? && @ask_buy.user_id != current_user.id %>
              <button class="btn btn-danger" type="button" name="join">
                <%= icon(:'shopping-cart', :white) + " 参与" %>
              </button>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/template" id="ask_buy-comment-template">
  <%= render "comment.html" %>
</script>