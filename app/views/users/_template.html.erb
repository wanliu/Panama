<div class='user_info span4'>
  <div class="content">
    <span class="label label-warning pull-right">买家</span>
    <div class="actions">
      {{#if is_followed }}
        <a href="javascript:void(0)" data-value-id="{{ user.id }}" class="btn btn-success">已关注</a>
      {{else}}
        <a href="javascript:void(0)" data-value-id="{{ user.id }}" class="btn btn-success follow">+关注</a>
      {{/if}}
    </div>
    <a href="/people/{{ login }}">
      <img src="{{ photos.header }}" class="avatar header"/>
    </a>    
    <div class="realname">
      <p>{{ower_name }}</p>
    </div>
    <div class="name">
      {{ login }}
    </div>

    <div class="telephone">
      {{phone}}
    </div>

    <div class="industry">
      {{ industry_type }}行业
    </div>    
  </div>
</div>