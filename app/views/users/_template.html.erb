<div class='user_info'>
  <div class="hover_place">
    <div class='info_detail' user-id='{{ id }}' >
        <div class="bg_nature">
          <img src="http://lorempixel.com/240/150/nature" />
        </div>
        <div class='userinfo'>
          <div class="circle_avatar">
            <img src='{{ photos.header }}' class="author " />
          </div>
          <div class="login">
            <a href="/people/{{ login }} ">
              {{ login }}</a>
          </div>
          <div class="industry_type">
            <span>行业：{{ industry_type }}</span>
          </div>
          <div class="tel">
            <span>联系方式：{{ phone }}</span>
          </div>
          <div class="add_friend">
            <button><a href="#">添加好友</a></button>
          </div>
          <div class="contact">
            <a href="#">
              <i class="icon-leaf"></i>
            </a>
          </div>
        </div>
    </div>
    <span class="label label-warning pull-right">买家</span>
    <a href="/people/{{ login }}">
      <img src="{{ photos.icon }}" class="avatar"/>
    </a>
  </div>
  <div  class="content">
    <div class="name">
      <i class="icon-user"></i>
      <a href="/people/{{ login }}" class="title">{{ login }}</a>
    </div>
    <div class="industry">
      <i class="icon-star"></i>
      <a href="#">{{ industry_type }}</a>
    </div>
  </div>
</div>