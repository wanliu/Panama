<div class=' widget circles'>
  <div class="title row-fluid">
    <div class="span4">
      <span style="font-size:25px;font-weight:bold;"><%= @city.try(:name) %>商圈</span>
    </div>
    <div class="span8"> <%= render "find_circles" %></div>
  </div>
 
  <div class='alert hide find_circle_tip'>
    没有找到符合要求的本地商圈
  </div>

  <div class ="wrapper row-fluid circles-list">
    <% if @circles.length > 0 %>
      <% @circles.each do |circle| %>
        <div class='businiess_community span3' id="<%= circle.id %>">
          <div class="head_img">
            <a href="/communities/<%=circle.id %>/circles">
              <img src="<%= circle.photos.avatar %>" class="circle_icon"/>
            </a>
          </div>
          <div  class="circle_detail">
            <div class ="circle_name">
              <a href="/communities/<%=circle.id %>/circles"><%=circle.name %></a>
            </div>

            <div class="row-fluid">
              <div class="friends_count span8">
                <span class="circle_count"><%=circle.friend_count %> 个成员</span>
              </div>

              <div class="create_name span4">
                <span><i class="icon-user"></i></span>
                <a href="/shops/<%=Shop.find(circle.owner_id).try(:name) %>">
                  <%=Shop.find(circle.owner_id).try(:name) %>
                </a>
              </div>
            </div>
            
            <div class="friends_icons">
              <% @friends.each do |friend| %>
                  <% if friend.circle_id == circle.id %>
                    <img src="<%=friend.photos.icon %>"/>
                  <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="widget">该地区暂时还没有商家入驻</div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(function() {
    new ApplyJoinCircleList({
      el: $(".circles-list"),
      current_user_login: '<%= current_user.login %>'
    })
  })
</script>