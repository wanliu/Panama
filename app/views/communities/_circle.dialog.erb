<% circles.each do |circle| %>
<div class='businiess_community span3' id="<%= circle.id %>">
    <div class="head_img">
      <a href="/communities/<%=circle.id %>/circles">
        <img src="<%= circle.photos.avatar %>" class="circle_icon"/>
      </a>
    </div>
    <div  class="circle_detail">
      <div class ="circle_name">
        <a href="/communities/<%=circle.id %>/circles"><%=circle.name %></a>
      </div>

      <div class="row-fluid">
        <div class="friends_count span7">
          <span class="circle_count"><%=circle.friend_count %> 个成员</span>
        </div>

        <div class="create_name span5">
          <span><i class="icon-user"></i></span>
          <a href="/shops/<%=circle.shop_name %>">
            <%=circle.shop_name %>
          </a>
        </div>
      </div>

      <div class="friends_icons">
        <% friends.each do |friend| %>
          <% if friend.circle_id == circle.id %>
           <img src="<%=friend.photos.icon %>"/>
          <% end %>
        <% end %>
      </div>
      <div class="join span3 pull-right">
        <% if current_user.shop != circle.owner  %>
          <% if circle.already_has?(current_user.id) %>
            <span data-value-id="<%=circle.id %>" class="label label-warning">已加入</span>
          <% else %>
              <a href="javascript:void(0)" data-value-id="<%=circle.id %>" class="label label-warning add_circle">加入</a>
          <% end %>
        <% else %>
          <span data-value-id="<%=circle.id %>" class="label label-warning">群主</span>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
<script type="text/javascript">
  $(function() {
    new ApplyJoinCircleList({
      el: $(".circles-list"),
      current_user_login: '<%= current_user.login %>'
    })
  })
</script>