<%= simple_form_for activity, :url => activities_score_index_path, :remote => true, :html => { class: 'form-horizontal' } do |f| %>
      <%= f.association :product,
                        :collection   => Product.all %>
	
  <div class="control-group">
    <label class="control-label" for="inputPrice">图片</label>
    <div class="controls">
		<img data-src="holder.js/140x140" class="img-rounded" alt="140x140" style="width: 140px; height: 140px;" src="">
		<img data-src="holder.js/140x140" class="img-rounded" alt="140x140" style="width: 140px; height: 140px;" src="">
		<img data-src="holder.js/140x140" class="img-rounded" alt="140x140" style="width: 140px; height: 140px;" src="">
    </div>
  </div>


    <%= f.input :price %>

    <%= f.input :give_score %>

    <%= f.input :limit_score %>


    <%= f.input :start_time,
                :as         => :date_picker, id: 'start_time', value: 'yyyy/MM/dd hh:mm:ss'       %>



    <%= f.input :end_time,
                :as         => :date_picker, id: 'end_time', value: 'yyyy/MM/dd hh:mm:ss'  %>

<% end %>