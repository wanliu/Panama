<% side_nav_for 'fiery' %>
<div id="main" class="content">
  <section class="widget">
    <div class="body-category">
      <ul id="activity-category" class="nav nav-tabs activity-category" >
        <li class='active'>
          <a href='/' >
            <%=icon 'eye-open' %>
          </a>
        </li>
      </ul>
    </div>
  </section>
  <%= render :partial => "activities/template" %>
</div>

<script type="text/javascript">
  $(function(){

    new LoadActivities({
      el: $('.activities_panel')
    })

    new CatalogViewList({
      el: $("#activity-category"),
      search: function(data){
        data.search_type = "activities"
        $(window).trigger("reset_search", data)
      }
    })
  })
</script>
