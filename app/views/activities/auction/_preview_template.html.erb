<div class='activity auction' activity-id='{{id}}' id="activity{{id}}">
  <div class='out-box'>
    <span class="activity_tag"></span>
    <form>
      <div class='in-box'>
        {{#photos}}
          <img src='{{avatar}}' class="preview a-{{id}}" />
        {{/photos}}
      </div>

      <div class='summary'>
        <h5 class="title href_name">{{title}}</h5>
        <p class='describe'>
          单价 <span class='price'>￥{{price}}</span>
          <span class="time-left"></span>
        </p>
      </div>

      <div class='userinfo'>
        {{#shop.photos}}
          <img src='{{icon}}' class="author img-circle" />
        {{/shop.photos}}
        <p>
          <a href="/shops/{{shop.name}}" class="href_name">
            {{ shop.name }}
          </a>
        </p>
        <span class='title'>参与</span>
        <span>{{ participate}} </span>
        <span class='title'>支持</span>
        <span class='like-count'>{{like}}</span>
      </div>

      <div class="buttons">
        {{#is_start}}
          <%= link_to 'javascript:void(0)', class: 'btn btn-danger launch-button' do %>
            <%= icon('shopping-cart') + " 购买" %>
          <% end %>
        {{/is_start}}

        {{#likes}}
          <%= link_to '#', class: 'btn unlike-button active' do %>
            <%= "取消支持" %>
          <% end %>
        {{/likes}}
        {{^likes}}
          <%= link_to '#', class: 'btn like-button' do %>
            <%= icon(:'thumbs-up') + " 支持" %>
          <% end %>
        {{/likes}}
      </div>
    </form>
  </div>
</div>
