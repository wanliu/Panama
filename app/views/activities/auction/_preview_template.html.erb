<div class='activity' activity-id='{{ id }}' id="activity{{ id }}">
	<div class='out-box'>
		<form>
			<div class='in-box'>
				{{#photos}}
					<img src='{{avatar}}' class="preview a-{{id}}" />
				{{/photos}}
			</div>

			<div class='summary'>
				<h5 class="title">{{ title }}</h5>
				<p style="word-wrap:break-word;">{{ description }}</p>
			</div>
			
			<div class='userinfo'>
				{{#author.photos}}
					<img src='{{icon}}' class="author img-circle" />
				{{/author.photos}}
				<p>
					<a href="<%= person_path('{{author}}') %>">
						{{ author.login }}
					</a>
				</p>
				<span>参与 {{ participate || 0}} </span>
				<span class='like-count'>支持 {{ like || 0 }}</span>
			</div>

			<div class="buttons">
				<%= link_to '#', class: 'btn btn-danger launch-button' do %>
					<%= icon('shopping-cart') + " 参与" %>
				<% end %>

				<%= link_to '#', class: 'btn unlike-button active' do %>
					<%= "取消支持" %>
				<% end %>

				<%= link_to '#', class: 'btn like-button' do %>
					<%= icon(:'thumbs-up') + " 支持" %>
				<% end %>
			</div>
		</form>
	</div>
</div>
