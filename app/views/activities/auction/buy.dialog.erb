<div id="auction_buy_dialog" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>参与活动</h3>
  </div>
  <div class="modal-body">
    <div>
      <%= @activity.title %>
    </div>
    <div class="row-fluid">
      <div class='span4'>
        <img src="<%=@activity.photos.preview %>" />
      </div>
      <div class='span8'>
        <%= form_for @transaction,
        :url => "/people", :html => { :class => "buy_activity" } do |f| %>
        <div class='row-fluid'>
          <div class='span2 title'>选择地址</div>
          <div class='span9'>
            <%=f.select :address_id, current_user.delivery_addresses %>
          </div>
          <div class='span1'>
            <%= button_tag icon(:list), :class => "btn", :type => "button" %>
          </div>
        </div>
        <div class='row-fluid'>
          <div class='span12'>
            <div class='row-fluid'>
              <div class='span2'>
                选择省,市,县
              </div>
              <div class='span2'>
                <select></select>
              </div>
              <div class='span2'>
                <select></select>
              </div>
              <div class='span2'>
                <select></select>
              </div>
              <div class='span2 title'>
                邮编
              </div>
              <div class='span2'>
                <select></select>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
    <button class="btn btn-primary">确认</button>
  </div>
</div>

